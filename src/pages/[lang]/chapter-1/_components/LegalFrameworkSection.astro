---
const { lang } = Astro.props;

const content = {
    ne: {
        title: "कानुनी आधार",
        text: "यो प्रोफाइल निम्न कानुनी दस्तावेजहरूको आधारमा तयार गरिएको छ:",
        documents: [
            "नेपालको संविधान, २०७२",
            "स्थानीय सरकार सञ्चालन ऐन, २०७४",
            "राष्ट्रिय प्राकृतिक स्रोत तथा वित्त आयोगको निर्देशन",
        ],
    },
    en: {
        title: "Legal Framework",
        text: "This profile has been prepared based on the following legal documents:",
        documents: [
            "Constitution of Nepal, 2015",
            "Local Government Operation Act, 2017",
            "Guidelines of National Natural Resources and Fiscal Commission",
        ],
    },
};

const t = content[lang];
---

<div class="mb-12">
    <h2 class="text-2xl md:text-3xl font-bold mb-4 text-slate-100">
        1.3 {t.title}
    </h2>

    <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 leading-relaxed mb-6">
            {t.text}
        </p>

        <div class="card bg-slate-900 border-l-4 border-green-600 mt-6">
            <ul class="space-y-2">
                {
                    t.documents.map((doc) => (
                        <li class="flex items-start gap-3">
                            <svg
                                class="w-5 h-5 text-green-600 flex-shrink-0 mt-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            <span class="text-gray-800">{doc}</span>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>
