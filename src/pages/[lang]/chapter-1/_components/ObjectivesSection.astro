---
const { lang } = Astro.props;

const content = {
    ne: {
        title: "उद्देश्य",
        text: "यस डिजिटल प्रोफाइलको मुख्य उद्देश्यहरू निम्नानुसार छन्:",
        objectives: [
            "नगरपालिकाको विस्तृत तथ्याङ्क संकलन र व्यवस्थापन",
            "योजना निर्माणमा आधार सामग्री उपलब्ध गराउने",
            "पारदर्शिता र जवाफदेहिता अभिवृद्धि",
            "सरोकारवालाहरूलाई सूचना प्रवाह सुनिश्चित गर्ने",
        ],
    },
    en: {
        title: "Objectives",
        text: "The main objectives of this digital profile are as follows:",
        objectives: [
            "Collection and management of detailed municipal statistics",
            "Provide baseline materials for planning",
            "Enhance transparency and accountability",
            "Ensure information flow to stakeholders",
        ],
    },
};

const t = content[lang];
---

<div class="mb-12">
    <h2 class="text-2xl md:text-3xl font-bold mb-4 text-slate-100">
        1.2 {t.title}
    </h2>

    <div class="prose prose-lg max-w-none">
        <p class="text-slate-300 leading-relaxed mb-6">
            {t.text}
        </p>

        <div class="card bg-slate-900 border-l-4 border-primary-600">
            <ul class="space-y-3">
                {
                    t.objectives.map((obj) => (
                        <li class="flex items-start gap-3">
                            <svg
                                class="w-6 h-6 text-primary-400 flex-shrink-0 mt-1"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            <span class="text-slate-100">{obj}</span>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>
