---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../lib/i18n";
import { getTranslations } from "../../../lib/i18n";

import BackgroundSection from "./_components/BackgroundSection.astro";
import ObjectivesSection from "./_components/ObjectivesSection.astro";
import LegalFrameworkSection from "./_components/LegalFrameworkSection.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

const pageTitle =
    lang === "ne" ? "परिच्छेद – १: परिचय" : "Chapter 1: Introduction";
---

<BaseLayout
    lang={lang}
    title={pageTitle}
    description={t.chapters[1].description}
    currentChapter={1}
>
    <!-- Chapter Header -->
    <section
        class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16"
    >
        <div class="container">
            <div class="max-w-4xl">
                <div class="text-blue-200 mb-2 font-medium">
                    {lang === "ne" ? "परिच्छेद १" : "Chapter 1"}
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    {pageTitle}
                </h1>
                <p class="text-xl text-blue-100">
                    {t.chapters[1].description}
                </p>
            </div>
        </div>
    </section>

    <!-- Content -->
    <section class="section-spacing">
        <div class="container">
            <div class="max-w-4xl mx-auto">
                <BackgroundSection lang={lang} />
                <ObjectivesSection lang={lang} />
                <LegalFrameworkSection lang={lang} />
            </div>
        </div>
    </section>

    <!-- Chapter Navigation -->
    <section class="border-t border-gray-200 py-8">
        <div class="container">
            <div class="flex justify-between items-center max-w-4xl mx-auto">
                <div class="text-gray-400">
                    {/* No previous chapter */}
                </div>
                <a
                    href={`/${lang}/chapter-2`}
                    class="btn btn-primary flex items-center gap-2"
                >
                    <span>{t.labels.nextChapter}</span>
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
