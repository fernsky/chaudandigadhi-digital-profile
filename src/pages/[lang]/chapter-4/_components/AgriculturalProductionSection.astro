---
import BarChart from "../../../../components/charts/BarChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "कृषि उत्पादन",
        text: "धान, मकै र गहुँ यहाँका प्रमुख बालीहरू हुन्।",
        chartTitle: "वार्षिक अन्न उत्पादन (मेट्रिक टन)",
        chartLabels: ["धान", "मकै", "गहुँ", "कोदो", "फापर"],
    },
    en: {
        title: "Agricultural Production",
        text: "Paddy, Maize, and Wheat are the major crops here.",
        chartTitle: "Annual Cereal Production (Metric Ton)",
        chartLabels: ["Paddy", "Maize", "Wheat", "Millet", "Buckwheat"],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-slate-600 pb-2"
    >
        4.2 {t.title}
    </h2>

    <p class="text-slate-300 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
        <BarChart
            id="crop-production"
            title={t.chartTitle}
            labels={t.chartLabels}
            data={[12500, 8500, 4200, 1200, 300]}
            backgroundColor="rgba(34, 197, 94, 0.8)"
            lang={lang}
        />
    </div>
</div>
