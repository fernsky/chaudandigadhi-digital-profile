---
const { lang } = Astro.props;

const content = {
    ne: {
        title: "उद्योग तथा व्यवसाय",
        text: "साना तथा घरेलु उद्योगहरूको संख्या बढ्दो क्रममा छ।",
        tableHeaders: ["उद्योगको प्रकार", "दर्ता संख्या", "रोजगारी सिर्जना"],
        tableRows: [
            ["कृषि तथा वन पैदावार", "१४५", "५८०"],
            ["पर्यटन उद्योग", "१२", "४५"],
            ["सेवा मूलक", "८५", "२१०"],
            ["उत्पादन मूलक", "३४", "१५०"],
            ["निर्माण उद्योग", "१८", "१२०"],
        ],
    },
    en: {
        title: "Industry and Business",
        text: "Number of small and cottage industries is increasing.",
        tableHeaders: [
            "Industry Type",
            "Registered Count",
            "Employment Generated",
        ],
        tableRows: [
            ["Agriculture and Forestry", "145", "580"],
            ["Tourism Industry", "12", "45"],
            ["Service Oriented", "85", "210"],
            ["Production Oriented", "34", "150"],
            ["Construction Industry", "18", "120"],
        ],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-gray-900 border-b border-orange-200 pb-2"
    >
        4.4 {t.title}
    </h2>

    <p class="text-gray-700 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="overflow-x-auto my-8 rounded-lg shadow border border-gray-200">
        <table class="w-full text-left border-collapse">
            <thead class="bg-orange-50">
                <tr>
                    {
                        t.tableHeaders.map((header) => (
                            <th class="p-4 font-bold text-gray-700 border-b border-orange-200 whitespace-nowrap">
                                {header}
                            </th>
                        ))
                    }
                </tr>
            </thead>
            <tbody>
                {
                    t.tableRows.map((row) => (
                        <tr class="hover:bg-gray-50 border-b border-gray-100 last:border-0 transition-colors">
                            {row.map((cell) => (
                                <td class="p-4 text-gray-700 border-b border-gray-100 font-medium">
                                    {cell}
                                </td>
                            ))}
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</div>
