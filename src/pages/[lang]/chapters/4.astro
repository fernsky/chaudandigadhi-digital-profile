---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { ArrowLeft, ArrowRight } from "lucide-astro";
import type { Language } from "../../../lib/i18n";

// Chapter 4 Components
import ChapterHero from "../../../components/chapters/4/ChapterHero.astro";
import EconomicOverview from "../../../components/chapters/4/EconomicOverview.astro";
import IndustrialClassification from "../../../components/chapters/4/IndustrialClassification.astro";
import HousingStructure from "../../../components/chapters/4/HousingStructure.astro";
import EconomicActivities from "../../../components/chapters/4/EconomicActivities.astro";
import LandUse from "../../../components/chapters/4/LandUse.astro";
import AgricultureDevelopment from "../../../components/chapters/4/AgricultureDevelopment.astro";
import TourismDevelopment from "../../../components/chapters/4/TourismDevelopment.astro";
import IndustryTrade from "../../../components/chapters/4/IndustryTrade.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };

const title =
    lang === "ne"
        ? "परिच्छेद – ४: आर्थिक अवस्था"
        : "Chapter 4: Economic Status";
const description =
    lang === "ne"
        ? "चौदण्डीगढी नगरपालिकाको आर्थिक संरचना, रोजगारी, कृषि, व्यापार र औद्योगिक विकास"
        : "Economic structure, employment, agriculture, trade and industrial development of Chaudandigadhi Municipality";
---

<BaseLayout title={title} description={description} lang={lang}>
    <!-- Chapter Hero -->
    <ChapterHero lang={lang} />

    <!-- 4.1 Economic Overview -->
    <EconomicOverview lang={lang} />

    <!-- 4.1.1 Industrial Classification -->
    <IndustrialClassification lang={lang} />

    <!-- 4.1.2 Housing Structure -->
    <HousingStructure lang={lang} />

    <!-- 4.1.3 - 4.1.6 Additional Economic Activities -->
    <EconomicActivities lang={lang} />

    <!-- 4.2 Land Use -->
    <LandUse lang={lang} />

    <!-- 4.3 Agriculture Development -->
    <AgricultureDevelopment lang={lang} />

    <!-- 4.4 Tourism Development -->
    <TourismDevelopment lang={lang} />

    <!-- 4.5 Industry, Trade and Banking -->
    <IndustryTrade lang={lang} />
    <!-- Chapter Navigation -->
    <section
        class="relative bg-[#050505] py-8 md:py-12 border-t border-zinc-900"
    >
        <div class="container mx-auto px-8 relative z-10">
            <nav
                class="w-full mx-auto flex flex-row items-center justify-between gap-4"
            >
                <a
                    href={`/${lang}/chapters/3`}
                    class="group flex items-center gap-3 text-zinc-500 hover:text-white transition-all duration-300"
                >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowLeft
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:-translate-x-1"
                        />
                    </div>
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ३" : "Chapter 3"}</span
                    >
                </a>

                <a
                    href={`/${lang}/chapters/5`}
                    class="group flex flex-row items-center gap-3 text-white hover:text-obsidian-accent transition-all duration-300"
                >
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ५" : "Chapter 5"}</span
                    >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowRight
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-1"
                        />
                    </div>
                </a>
            </nav>
        </div>
    </section>
</BaseLayout>

<style>
    /* Smooth scroll behavior */
    :global(html) {
        scroll-behavior: smooth;
    }
</style>
