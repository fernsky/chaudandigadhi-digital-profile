---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../lib/i18n";

// Chapter 4 Components
import ChapterHero from "../../../components/chapters/4/ChapterHero.astro";
import EconomicOverview from "../../../components/chapters/4/EconomicOverview.astro";
import ForeignEmployment from "../../../components/chapters/4/ForeignEmployment.astro";
import Housing from "../../../components/chapters/4/Housing.astro";
import LandUse from "../../../components/chapters/4/LandUse.astro";
import Agriculture from "../../../components/chapters/4/Agriculture.astro";
import Tourism from "../../../components/chapters/4/Tourism.astro";
import IndustryTrade from "../../../components/chapters/4/IndustryTrade.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
---

<BaseLayout
    title="परिच्छेद – ४: आर्थिक अवस्था | चौदण्डीगढी नगरपालिका"
    description="चौदण्डीगढी नगरपालिकाको आर्थिक संरचना, कृषि, पर्यटन र उद्योग व्यापारको विस्तृत विवरण"
    lang={lang}
    currentChapter={4}
    hideMegaMenu={true}
>
    <main class="min-h-screen bg-black">
        <!-- Chapter Hero -->
        <ChapterHero lang={lang} />

        <!-- Economic Overview (Table 23) -->
        <EconomicOverview lang={lang} />

        <!-- Foreign Employment (Table 28) -->
        <ForeignEmployment lang={lang} />

        <!-- Housing (Tables 24-27) -->
        <Housing lang={lang} />

        <!-- Land Use -->
        <LandUse lang={lang} />

        <!-- Agriculture (Tables 29-34) -->
        <Agriculture lang={lang} />

        <!-- Tourism (Tables 35-36) -->
        <Tourism lang={lang} />

        <!-- Industry & Trade (Tables 37-39) -->
        <IndustryTrade lang={lang} />
    </main>
</BaseLayout>
