---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { ArrowLeft, ArrowRight } from "lucide-astro";
import type { Language } from "../../../lib/i18n";

// Chapter 7 Components
import ChapterHero from "../../../components/chapters/7/ChapterHero.astro";
import TransportationInfrastructure from "../../../components/chapters/7/TransportationInfrastructure.astro";
import ElectricityAlternativeEnergy from "../../../components/chapters/7/ElectricityAlternativeEnergy.astro";
import CommunicationTechnology from "../../../components/chapters/7/CommunicationTechnology.astro";
import HousingBuildings from "../../../components/chapters/7/HousingBuildings.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };

const title =
    lang === "ne"
        ? "परिच्छेद – ७: भौतिक विकासको अवस्था"
        : "Chapter 7: Physical Development Status";
const description =
    lang === "ne"
        ? "चौदण्डीगढी नगरपालिकाको भौतिक पूर्वाधार, यातायात, सञ्चार र ऊर्जाको अवस्था"
        : "Physical infrastructure, transportation, communication, and energy status of Chaudandigadhi Municipality";
---

<BaseLayout
    title={title}
    description={description}
    lang={lang}
    currentChapter={7}
>
    <!-- Chapter Hero -->
    <ChapterHero lang={lang} />

    <!-- 7.1 Transportation Infrastructure -->
    <TransportationInfrastructure lang={lang} />

    <!-- 7.2 Electricity and Alternative Energy -->
    <ElectricityAlternativeEnergy lang={lang} />

    <!-- 7.3 Communication and Technology -->
    <CommunicationTechnology lang={lang} />

    <!-- 7.4 Housing and Buildings -->
    <HousingBuildings lang={lang} />
    <!-- Chapter Navigation -->
    <section
        class="relative bg-[#050505] py-8 md:py-12 border-t border-zinc-900"
    >
        <div class="container mx-auto px-8 relative z-10">
            <nav
                class="w-full mx-auto flex flex-row items-center justify-between gap-4"
            >
                <a
                    href={`/${lang}/chapters/6`}
                    class="group flex items-center gap-3 text-zinc-500 hover:text-white transition-all duration-300"
                >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowLeft
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:-translate-x-1"
                        />
                    </div>
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ६" : "Chapter 6"}</span
                    >
                </a>

                <a
                    href={`/${lang}/chapters/8`}
                    class="group flex flex-row items-center gap-3 text-white hover:text-obsidian-accent transition-all duration-300"
                >
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ८" : "Chapter 8"}</span
                    >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowRight
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-1"
                        />
                    </div>
                </a>
            </nav>
        </div>
    </section>
</BaseLayout>

<style>
    /* Smooth scroll behavior */
    :global(html) {
        scroll-behavior: smooth;
    }
</style>
