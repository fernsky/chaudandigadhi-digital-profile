---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { ArrowLeft, ArrowRight } from "lucide-astro";
import type { Language } from "../../../lib/i18n";

// Chapter 6 Components
import ChapterHero from "../../../components/chapters/6/ChapterHero.astro";
import ForestManagement from "../../../components/chapters/6/ForestManagement.astro";
import WaterResources from "../../../components/chapters/6/WaterResources.astro";
import Biodiversity from "../../../components/chapters/6/Biodiversity.astro";
import DisasterManagement from "../../../components/chapters/6/DisasterManagement.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };

const title =
    lang === "ne"
        ? "परिच्छेद – ६: वन तथा वातावरणीय स्थिति"
        : "Chapter 6: Forest and Environmental Status";
const description =
    lang === "ne"
        ? "चौदण्डीगढी नगरपालिकाको वन क्षेत्र, जैविक विविधता, जलस्रोत र विपद् व्यवस्थापन"
        : "Forest area, biodiversity, water resources and disaster management of Chaudandigadhi Municipality";
---

<BaseLayout title={title} description={description} lang={lang}>
    <!-- Chapter Hero -->
    <ChapterHero lang={lang} />

    <!-- 6.1 Forest Management -->
    <ForestManagement lang={lang} />

    <!-- 6.2 Water Resources -->
    <WaterResources lang={lang} />

    <!-- 6.3 Biodiversity -->
    <Biodiversity lang={lang} />

    <!-- 6.4 Disaster Management -->
    <DisasterManagement lang={lang} />
    <!-- Chapter Navigation -->
    <section
        class="relative bg-[#050505] py-8 md:py-12 border-t border-zinc-900"
    >
        <div class="container mx-auto px-8 relative z-10">
            <nav
                class="w-full mx-auto flex flex-row items-center justify-between gap-4"
            >
                <a
                    href={`/${lang}/chapters/5`}
                    class="group flex items-center gap-3 text-zinc-500 hover:text-white transition-all duration-300"
                >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowLeft
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:-translate-x-1"
                        />
                    </div>
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ५" : "Chapter 5"}</span
                    >
                </a>

                <a
                    href={`/${lang}/chapters/7`}
                    class="group flex flex-row items-center gap-3 text-white hover:text-obsidian-accent transition-all duration-300"
                >
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ७" : "Chapter 7"}</span
                    >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowRight
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-1"
                        />
                    </div>
                </a>
            </nav>
        </div>
    </section>
</BaseLayout>

<style>
    /* Smooth scroll behavior */
    :global(html) {
        scroll-behavior: smooth;
    }
</style>
