---
import BarChart from "../../../../components/charts/BarChart.astro";
import PieChart from "../../../../components/charts/PieChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "जनसंख्या वितरण",
        text: "चौदण्डीगढी नगरपालिकाको कुल जनसंख्या ४५,६७८ छ।",
        charts: {
            ward: {
                title: "वडागत जनसंख्या वितरण",
                labels: [
                    "वडा १",
                    "वडा २",
                    "वडा ३",
                    "वडा ४",
                    "वडा ५",
                    "वडा ६",
                    "वडा ७",
                    "वडा ८",
                ],
            },
            gender: {
                title: "लिङ्गअनुसार जनसंख्या",
                labels: ["पुरुष", "महिला", "अन्य"],
            },
        },
    },
    en: {
        title: "Population Distribution",
        text: "The total population of Chaudandigadhi Municipality is 45,678.",
        charts: {
            ward: {
                title: "Population Distribution by Ward",
                labels: [
                    "Ward 1",
                    "Ward 2",
                    "Ward 3",
                    "Ward 4",
                    "Ward 5",
                    "Ward 6",
                    "Ward 7",
                    "Ward 8",
                ],
            },
            gender: {
                title: "Population by Gender",
                labels: ["Male", "Female", "Other"],
            },
        },
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-slate-600 pb-2"
    >
        3.1 {t.title}
    </h2>

    <p class="text-slate-300 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="w-full">
            <BarChart
                id="population-by-ward"
                title={t.charts.ward.title}
                labels={t.charts.ward.labels}
                data={[5234, 6123, 5678, 4890, 6234, 5123, 6234, 6162]}
                backgroundColor="rgba(37, 99, 235, 0.8)"
                lang={lang}
            />
        </div>
        <div class="w-full">
            <PieChart
                id="population-by-gender"
                title={t.charts.gender.title}
                labels={t.charts.gender.labels}
                data={[22340, 23298, 40]}
                backgroundColor={[
                    "rgba(37, 99, 235, 0.8)",
                    "rgba(34, 197, 94, 0.8)",
                    "rgba(251, 191, 36, 0.8)",
                ]}
                lang={lang}
            />
        </div>
    </div>
</div>
