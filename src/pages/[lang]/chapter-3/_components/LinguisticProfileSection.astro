---
import PieChart from "../../../../components/charts/PieChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "भाषिक विवरण",
        text: "नगरपालिकामा विभिन्न भाषा बोल्ने जनसंख्या रहेका छन्।",
        chartTitle: "मातृभाषा अनुसार जनसंख्या",
        chartLabels: ["नेपाली", "मैथिली", "भोजपुरी", "तामाङ", "अन्य"],
    },
    en: {
        title: "Linguistic Profile",
        text: "The municipality has population speaking various languages.",
        chartTitle: "Population by Mother Tongue",
        chartLabels: ["Nepali", "Maithili", "Bhojpuri", "Tamang", "Others"],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-purple-100 pb-2"
    >
        3.2 {t.title}
    </h2>

    <p class="text-slate-300 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
        <div class="max-w-xl mx-auto w-full">
            <PieChart
                id="language-distribution"
                title={t.chartTitle}
                labels={t.chartLabels}
                data={[28456, 8234, 4567, 2345, 2076]}
                backgroundColor={[
                    "rgba(37, 99, 235, 0.8)",
                    "rgba(34, 197, 94, 0.8)",
                    "rgba(251, 191, 36, 0.8)",
                    "rgba(239, 68, 68, 0.8)",
                    "rgba(168, 85, 247, 0.8)",
                ]}
                lang={lang}
            />
        </div>
    </div>
</div>
