---
import BarChart from "../../../../components/charts/BarChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "शैक्षिक अवस्था",
        text: "नगरपालिकाको साक्षरता दर ७८.५% रहेको छ।",
        chartTitle: "साक्षरता दर (%)",
        chartLabel: "प्रतिशत",
        chartLabels: ["जम्मा", "पुरुष", "महिला"],
    },
    en: {
        title: "Educational Status",
        text: "The literacy rate of the municipality is 78.5%.",
        chartTitle: "Literacy Rate (%)",
        chartLabel: "Percentage",
        chartLabels: ["Total", "Male", "Female"],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-teal-100 pb-2"
    >
        5.1 {t.title}
    </h2>

    <p class="text-gray-700 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
        <BarChart
            id="literacy-chart"
            title={t.chartTitle}
            labels={t.chartLabels}
            data={[78.5, 85.2, 72.1]}
            backgroundColor="rgba(20, 184, 166, 0.8)"
            lang={lang}
        />
    </div>
</div>
