---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../i18n";
import { getTranslations } from "../../../i18n";

import RoadNetworkSection from "./_components/RoadNetworkSection.astro";
import ElectricityAccessSection from "./_components/ElectricityAccessSection.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

const pageTitle =
    lang === "ne"
        ? "परिच्छेद – ७: भौतिक विकास"
        : "Chapter 7: Physical Infrastructure";
---

<BaseLayout
    lang={lang}
    title={pageTitle}
    description={t.chapters[7].description}
    currentChapter={7}
>
    <section
        class="bg-gradient-to-r from-gray-600 to-gray-800 text-white py-16"
    >
        <div class="container">
            <div class="max-w-4xl">
                <div class="text-gray-200 mb-2 font-medium">
                    {lang === "ne" ? "परिच्छेद ७" : "Chapter 7"}
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    {pageTitle}
                </h1>
                <p class="text-xl text-gray-100">
                    {t.chapters[7].description}
                </p>
            </div>
        </div>
    </section>

    <section class="section-spacing">
        <div class="container">
            <div class="max-w-6xl mx-auto">
                <RoadNetworkSection lang={lang} />
                <ElectricityAccessSection lang={lang} />
            </div>
        </div>
    </section>

    <section class="border-t border-gray-200 py-8">
        <div class="container">
            <div class="flex justify-between items-center max-w-6xl mx-auto">
                <a
                    href={`/${lang}/chapter-6`}
                    class="btn btn-secondary flex items-center gap-2"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path></svg
                    >
                    <span>{t.labels.previousChapter}</span>
                </a>
                <a
                    href={`/${lang}/chapter-8`}
                    class="btn btn-primary flex items-center gap-2"
                >
                    <span>{t.labels.nextChapter}</span>
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path></svg
                    >
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
