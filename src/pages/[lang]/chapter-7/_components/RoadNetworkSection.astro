---
import BarChart from "../../../../components/charts/BarChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "सडक सञ्जाल",
        text: "नगरपालिकाका सबै वडामा सडक सञ्जाल पुगेको छ।",
        chartTitle: "सडकको प्रकार (मि.मि)",
        chartLabels: ["कालोपत्रे", "ग्राभेल", "कच्ची"],
    },
    en: {
        title: "Road Network",
        text: "Road network has reached all wards of the municipality.",
        chartTitle: "Road Types (km)",
        chartLabels: ["Blacktopped", "Gravel", "Earthen"],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-slate-700 pb-2"
    >
        7.1 {t.title}
    </h2>

    <p class="text-gray-700 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
        <BarChart
            id="road-type-chart"
            title={t.chartTitle}
            labels={t.chartLabels}
            data={[45, 120, 350]}
            backgroundColor="rgba(107, 114, 128, 0.8)"
            lang={lang}
        />
    </div>
</div>
