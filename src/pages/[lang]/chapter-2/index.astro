---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../lib/i18n";
import { getTranslations } from "../../../lib/i18n";
import { ChevronLeft, ChevronRight } from "lucide-astro";

import GeographicalLocationSection from "./_components/GeographicalLocationSection.astro";
import HistoricalBackgroundSection from "./_components/HistoricalBackgroundSection.astro";
import PoliticalAdministrativeSection from "./_components/PoliticalAdministrativeSection.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

const pageTitle =
    lang === "ne"
        ? "परिच्छेद – २: नगरपालिकाको चिनारी"
        : "Chapter 2: Municipal Identity";
---

<BaseLayout
    lang={lang}
    title={pageTitle}
    description={t.chapters[2].description}
    currentChapter={2}
>
    <!-- Chapter Header -->
    <section
        class="bg-gradient-to-r from-slate-800 to-slate-950 text-white py-16"
    >
        <div class="container">
            <div class="max-w-4xl">
                <div class="text-slate-400 mb-2 font-medium">
                    {lang === "ne" ? "परिच्छेद २" : "Chapter 2"}
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    {pageTitle}
                </h1>
                <p class="text-xl text-slate-300">
                    {t.chapters[2].description}
                </p>
            </div>
        </div>
    </section>

    <!-- Content -->
    <section class="section-spacing">
        <div class="container">
            <div class="max-w-4xl mx-auto">
                <GeographicalLocationSection lang={lang} />
                <HistoricalBackgroundSection lang={lang} />
                <PoliticalAdministrativeSection lang={lang} />
            </div>
        </div>
    </section>

    <!-- Chapter Navigation -->
    <section class="border-t border-slate-700 py-8">
        <div class="container">
            <div class="flex justify-between items-center max-w-4xl mx-auto">
                <a
                    href={`/${lang}/chapter-1`}
                    class="btn btn-secondary flex items-center gap-2"
                >
                    <ChevronLeft size={20} />
                    <span>{t.labels.previousChapter}</span>
                </a>
                <a
                    href={`/${lang}/chapter-3`}
                    class="btn btn-primary flex items-center gap-2"
                >
                    <span>{t.labels.nextChapter}</span>
                    <ChevronRight size={20} />
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
