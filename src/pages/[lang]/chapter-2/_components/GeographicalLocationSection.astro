---
import LeafletMap from "../../../../components/maps/LeafletMap.astro";
import boundaryData from "../../../../data/maps/chapter-2/boundary.json";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "भौगोलिक अवस्थिति",
        text: "चौदण्डीगढी नगरपालिका उदयपुर जिल्लाको पूर्वी भागमा अवस्थित छ। यो नगरपालिका २६ डिग्री ४२ मिनेट देखि २६ डिग्री ५६ मिनेट उत्तरी अक्षांश र ८६ डिग्री ४७ मिनेट देखि ८७ डिग्री ५ मिनेट पूर्वी देशान्तरसम्म फैलिएको छ।",
        mapTitle: "नगरपालिकाको नक्सा",
    },
    en: {
        title: "Geographical Location",
        text: "Chaudandigadhi Municipality is located in the eastern part of Udayapur district. It extends from 26°42' to 26°56' North latitude and 86°47' to 87°5' East longitude.",
        mapTitle: "Municipality Map",
    },
};

const t = content[lang];
---

<div class="mb-12">
    <h2 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">
        2.1 {t.title}
    </h2>

    <p class="text-gray-700 text-lg leading-relaxed mb-6">
        {t.text}
    </p>

    <LeafletMap
        id="municipal-location"
        title={t.mapTitle}
        data={boundaryData}
        height="500px"
    />
</div>
