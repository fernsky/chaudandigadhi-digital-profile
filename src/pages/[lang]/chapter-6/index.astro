---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../lib/i18n";
import { getTranslations } from "../../../lib/i18n";

import ForestAreaSection from "./_components/ForestAreaSection.astro";
import DisasterRiskSection from "./_components/DisasterRiskSection.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

const pageTitle =
    lang === "ne"
        ? "परिच्छेद – ६: वन तथा वातावरण"
        : "Chapter 6: Forest and Environment";
---

<BaseLayout
    lang={lang}
    title={pageTitle}
    description={t.chapters[6].description}
    currentChapter={6}
>
    <section
        class="bg-gradient-to-r from-slate-800 to-slate-950 text-white py-16"
    >
        <div class="container">
            <div class="max-w-4xl">
                <div class="text-slate-400 mb-2 font-medium">
                    {lang === "ne" ? "परिच्छेद ६" : "Chapter 6"}
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    {pageTitle}
                </h1>
                <p class="text-xl text-slate-300">
                    {t.chapters[6].description}
                </p>
            </div>
        </div>
    </section>

    <section class="section-spacing">
        <div class="container">
            <div class="max-w-6xl mx-auto">
                <ForestAreaSection lang={lang} />
                <DisasterRiskSection lang={lang} />
            </div>
        </div>
    </section>

    <section class="border-t border-slate-700 py-8">
        <div class="container">
            <div class="flex justify-between items-center max-w-6xl mx-auto">
                <a
                    href={`/${lang}/chapter-5`}
                    class="btn btn-secondary flex items-center gap-2"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path></svg
                    >
                    <span>{t.labels.previousChapter}</span>
                </a>
                <a
                    href={`/${lang}/chapter-7`}
                    class="btn btn-primary flex items-center gap-2"
                >
                    <span>{t.labels.nextChapter}</span>
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path></svg
                    >
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
