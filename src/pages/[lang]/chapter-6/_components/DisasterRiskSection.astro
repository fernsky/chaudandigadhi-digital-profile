---
const { lang } = Astro.props;

const content = {
    ne: {
        title: "विपद् जोखिम",
        text: "बाढी र पहिरो यहाँको मुख्य प्राकृतिक प्रकोप हुन्।",
        timeline: [
            {
                year: "२०७८",
                title: "बाढी",
                description:
                    "त्रियुगा नदीमा आएको बाढीले वडा नं ५ मा क्षति पुर्याएको।",
            },
            {
                year: "२०७६",
                title: "आगलागी",
                description: "सामुदायिक वनमा डढेलो लागेको।",
            },
        ],
    },
    en: {
        title: "Disaster Risk",
        text: "Flood and landslide are the main natural disasters here.",
        timeline: [
            {
                year: "2078 BS",
                title: "Flood",
                description:
                    "Flood in Triyuga river caused damage in Ward No. 5.",
            },
            {
                year: "2076 BS",
                title: "Fire",
                description: "Wildfire in community forest.",
            },
        ],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-emerald-100 pb-2"
    >
        6.2 {t.title}
    </h2>

    <p class="text-gray-700 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div
        class="relative border-l-4 border-emerald-600 ml-4 my-8 pl-8 space-y-8"
    >
        {
            t.timeline.map((event) => (
                <div class="relative">
                    <div class="absolute -left-12 top-0 w-8 h-8 bg-emerald-600  flex items-center justify-center text-white font-bold text-sm border-4 border-white shadow">
                        !
                    </div>
                    <div class="text-2xl font-bold text-emerald-700 mb-2">
                        {event.year}
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-1">
                        {event.title}
                    </h3>
                    <p class="text-slate-400">{event.description}</p>
                </div>
            ))
        }
    </div>
</div>
