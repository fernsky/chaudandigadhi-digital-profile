---
import PieChart from "../../../../components/charts/PieChart.astro";

const { lang } = Astro.props;

const content = {
    ne: {
        title: "वन क्षेत्र",
        text: "नगरपालिकाको ४५% भूभाग वन क्षेत्रले ओगटेको छ।",
        chartTitle: "वनको प्रकार",
        chartLabels: ["सामुदायिक वन", "सरकारी वन", "कबुलियती वन", "निजी वन"],
    },
    en: {
        title: "Forest Area",
        text: "45% of the municipality area is covered by forest.",
        chartTitle: "Forest Types",
        chartLabels: [
            "Community Forest",
            "Government Forest",
            "Leasehold Forest",
            "Private Forest",
        ],
    },
};

const t = content[lang];
---

<div class="mb-16">
    <h2
        class="text-2xl md:text-3xl font-bold mb-4 text-slate-100 border-b border-slate-600 pb-2"
    >
        6.1 {t.title}
    </h2>

    <p class="text-slate-300 text-lg leading-relaxed mb-8">
        {t.text}
    </p>

    <div class="max-w-xl mx-auto w-full">
        <PieChart
            id="forest-type-chart"
            title={t.chartTitle}
            labels={t.chartLabels}
            data={[55, 30, 5, 10]}
            backgroundColor={[
                "rgba(22, 163, 74, 0.8)",
                "rgba(21, 128, 61, 0.8)",
                "rgba(134, 239, 172, 0.8)",
                "rgba(34, 197, 94, 0.8)",
            ]}
            lang={lang}
        />
    </div>
</div>
