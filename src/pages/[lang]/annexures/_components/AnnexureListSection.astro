---
const { lang } = Astro.props;

const content = {
    ne: {
        items: [
            { number: "१", title: "जनप्रतिनिधिहरूको विवरण" },
            { number: "२", title: "कर्मचारी विवरण" },
            { number: "३", title: "विद्यालयहरूको सूची" },
            { number: "४", title: "स्वास्थ्य संस्थाहरूको सूची" },
            { number: "५", title: "सडकहरूको सूची" },
        ],
        note: "थप अनुसूचीहरू तथ्याङ्क उपलब्ध भएपछि अपडेट गरिनेछ।",
    },
    en: {
        items: [
            { number: "1", title: "Details of Elected Representatives" },
            { number: "2", title: "Staff Details" },
            { number: "3", title: "List of Schools" },
            { number: "4", title: "List of Health Institutions" },
            { number: "5", title: "List of Roads" },
        ],
        note: "More annexures will be updated as data becomes available.",
    },
};

const t = content[lang];
---

<div class="grid gap-6">
    {
        t.items.map((item) => (
            <div class="card hover:shadow-lg transition-shadow border-l-4 border-primary-600 p-6 flex items-center justify-between group cursor-pointer">
                <div>
                    <div class="text-sm font-bold text-primary-600 mb-1">
                        {lang === "ne" ? "अनुसूची" : "Annex"} {item.number}
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 group-hover:text-primary-700 transition-colors">
                        {item.title}
                    </h3>
                </div>
                <svg
                    class="w-6 h-6 text-gray-400 group-hover:text-primary-600 transform group-hover:translate-x-1 transition-all"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                    />
                </svg>
            </div>
        ))
    }
</div>

<div class="mt-12 p-6 bg-slate-900  text-center">
    <p class="text-slate-400">
        {t.note}
    </p>
</div>
