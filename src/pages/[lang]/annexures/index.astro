---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import type { Language } from "../../../lib/i18n";
import { getTranslations } from "../../../lib/i18n";
import { ArrowLeft, ArrowRight } from "lucide-astro";

// Components
import AnnexureHero from "../../../components/chapters/annexures/AnnexureHero.astro";
import ElectedRepresentatives from "../../../components/chapters/annexures/ElectedRepresentatives.astro";
import AgricultureGroups from "../../../components/chapters/annexures/AgricultureGroups.astro";
import HealthWorkers from "../../../components/chapters/annexures/HealthWorkers.astro";
import ToleDevelopment from "../../../components/chapters/annexures/ToleDevelopment.astro";
import WardWomenNetwork from "../../../components/chapters/annexures/WardWomenNetwork.astro";
import DataCollectionPhotos from "../../../components/chapters/annexures/DataCollectionPhotos.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "ne" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

const pageTitle = t.annexures.title;
const description =
    lang === "ne"
        ? "चौदण्डीगढी नगरपालिकाको अनुसूचीहरू"
        : "Annexures of Chaudandigadhi Municipality";
---

<BaseLayout lang={lang} title={pageTitle} description={description}>
    <AnnexureHero lang={lang} />

    <section class="py-16 bg-[#050505] min-h-screen">
        <div class="container mx-auto px-8">
            <div class="w-full mx-auto">
                <ElectedRepresentatives lang={lang} />
                <AgricultureGroups lang={lang} />
                <HealthWorkers lang={lang} />
                <ToleDevelopment lang={lang} />
                <WardWomenNetwork lang={lang} />
                <DataCollectionPhotos lang={lang} />
            </div>
        </div>
    </section>

    <!-- Chapter Navigation -->
    <section
        class="relative bg-[#050505] py-8 md:py-12 border-t border-zinc-900"
    >
        <div class="container mx-auto px-8 relative z-10">
            <nav
                class="w-full mx-auto flex flex-row items-center justify-between gap-4"
            >
                <a
                    href={`/${lang}/chapters/8`}
                    class="group flex items-center gap-3 text-zinc-500 hover:text-white transition-all duration-300"
                >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowLeft
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:-translate-x-1"
                        />
                    </div>
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "परिच्छेद – ८" : "Chapter 8"}</span
                    >
                </a>

                <a
                    href={`/${lang}`}
                    class="group flex flex-row items-center gap-3 text-white hover:text-obsidian-accent transition-all duration-300"
                >
                    <span
                        class="font-serif text-base md:text-lg tracking-wide whitespace-nowrap"
                        >{lang === "ne" ? "गृहपृष्ठ" : "Home"}</span
                    >
                    <div
                        class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center rounded-full border border-white/10 bg-white/5 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300"
                    >
                        <ArrowRight
                            class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-1"
                        />
                    </div>
                </a>
            </nav>
        </div>
    </section>
</BaseLayout>
