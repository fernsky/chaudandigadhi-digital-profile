---
interface Props {
    data: Array<{
        label: string;
        value: number;
    }>;
}

const { data } = Astro.props;
const chartData = [...data].sort((a, b) => b.value - a.value);
---

<div
    class="w-full h-[300px] md:h-[400px]"
    id={`housing-const-chart-${Math.random().toString(36).substr(2, 9)}`}
>
</div>

<script>
    import * as d3 from "d3";

    // Find all chart containers
    const containers = document.querySelectorAll(
        '[id^="housing-const-chart-"]',
    );

    containers.forEach((container) => {
        // We need a way to pass specific data to EACH chart instance.
        // Astro scripts run once per page.
        // We need to associate data with the unique ID.
        // Let's use the pattern from other charts: wrap in a component that handles its own data via dataset.
    });
</script>

<!-- Refactored approach for multiple instances -->
<div class="chart-wrapper">
    <div class="chart-container w-full h-[300px] md:h-[400px]"></div>
    <div class="chart-data hidden" data-chart={JSON.stringify(chartData)}></div>
</div>

<script>
    import * as d3 from "d3";

    const wrappers = document.querySelectorAll(".chart-wrapper");

    wrappers.forEach((wrapper) => {
        const container = wrapper.querySelector(
            ".chart-container",
        ) as HTMLElement;
        const dataEl = wrapper.querySelector(".chart-data") as HTMLElement;

        if (!container || !dataEl || container.hasChildNodes()) return;

        const data = JSON.parse(dataEl.dataset.chart || "[]");

        const margin = { top: 20, right: 30, bottom: 60, left: 60 };
        const width = container.clientWidth - margin.left - margin.right;
        const height = container.clientHeight - margin.top - margin.bottom;

        const svg = d3
            .select(container)
            .append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
            .append("g")
            .attr("transform", `translate(${margin.left},${margin.top})`);

        // X axis
        const x = d3
            .scaleBand()
            .range([0, width])
            .domain(data.map((d: any) => d.label))
            .padding(0.2);

        svg.append("g")
            .attr("transform", `translate(0, ${height})`)
            .call(d3.axisBottom(x))
            .selectAll("text")
            .attr("transform", "translate(-10,0)rotate(-45)")
            .style("text-anchor", "end")
            .style("font-family", "Noto Serif Devanagari, serif")
            .style("font-size", "12px")
            .style("fill", "#d4d4d8");

        // Y axis
        const y = d3
            .scaleLinear()
            .domain([0, d3.max(data, (d: any) => d.value) || 100])
            .range([height, 0]);

        svg.append("g")
            .call(d3.axisLeft(y))
            .selectAll("text")
            .style("font-family", "IBM Plex Serif, serif")
            .style("font-size", "12px")
            .style("fill", "#d4d4d8");

        svg.selectAll(".domain, .tick line").style("stroke", "#52525b");

        // Bars
        svg.selectAll("mybar")
            .data(data)
            .join("rect")
            .attr("x", (d: any) => x(d.label) as number)
            .attr("y", (d: any) => y(d.value))
            .attr("width", x.bandwidth())
            .attr("height", (d: any) => height - y(d.value))
            .attr("fill", "#8b5cf6") // violet-500
            .on("mouseover", function () {
                d3.select(this).style("opacity", 0.8);
            })
            .on("mouseout", function () {
                d3.select(this).style("opacity", 1);
            });

        // Labels
        svg.selectAll(".label")
            .data(data)
            .enter()
            .append("text")
            .attr("x", (d: any) => (x(d.label) as number) + x.bandwidth() / 2)
            .attr("y", (d: any) => y(d.value) - 5)
            .attr("text-anchor", "middle")
            .text((d: any) => d.value)
            .style("font-family", "IBM Plex Serif, serif")
            .style("font-size", "10px")
            .style("fill", "#d4d4d8");
    });
</script>
