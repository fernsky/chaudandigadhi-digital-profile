---
interface Props {
    data: Array<{
        label: string;
        value: number;
    }>;
}

const { data } = Astro.props;

// Sort data by value descending
const chartData = [...data].sort((a, b) => b.value - a.value);
---

<div class="w-full h-[400px] md:h-[500px]" id="foreign-employment-chart"></div>

<div
    id="fe-chart-data-store"
    data-chart={JSON.stringify(chartData)}
    class="hidden"
>
</div>

<script>
    import * as d3 from "d3";

    // @ts-ignore
    const container = document.getElementById("foreign-employment-chart");
    // @ts-ignore
    const dataStore = document.getElementById("fe-chart-data-store");

    if (container && dataStore) {
        const data = JSON.parse(dataStore.dataset.chart || "[]");

        const margin = { top: 20, right: 30, bottom: 60, left: 60 };
        const width = container.clientWidth - margin.left - margin.right;
        const height = container.clientHeight - margin.top - margin.bottom;

        // Clear any existing svg
        container.innerHTML = "";

        const svg = d3
            .select(container)
            .append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
            .append("g")
            .attr("transform", `translate(${margin.left},${margin.top})`);

        // X axis
        const x = d3
            .scaleBand()
            .range([0, width])
            .domain(data.map((d: any) => d.label))
            .padding(0.2);

        svg.append("g")
            .attr("transform", `translate(0, ${height})`)
            .call(d3.axisBottom(x))
            .selectAll("text")
            .attr("transform", "translate(-10,0)rotate(-45)")
            .style("text-anchor", "end")
            .style("font-family", "Noto Serif Devanagari, serif")
            .style("font-size", "12px")
            .style("fill", "#d4d4d8"); // zinc-300

        // Y axis
        const y = d3
            .scaleLinear()
            .domain([0, d3.max(data, (d: any) => d.value) || 100])
            .range([height, 0]);

        svg.append("g")
            .call(d3.axisLeft(y))
            .selectAll("text")
            .style("font-family", "IBM Plex Serif, serif")
            .style("font-size", "12px")
            .style("fill", "#d4d4d8"); // zinc-300

        // Axis Styles
        svg.selectAll(".domain").style("stroke", "#52525b"); // zinc-600
        svg.selectAll(".tick line").style("stroke", "#52525b"); // zinc-600

        // Bars
        svg.selectAll("mybar")
            .data(data)
            .join("rect")
            .attr("x", (d: any) => x(d.label) as number)
            .attr("y", (d: any) => y(d.value))
            .attr("width", x.bandwidth())
            .attr("height", (d: any) => height - y(d.value))
            .attr("fill", "#3b82f6") // blue-500
            .on("mouseover", function (event, d) {
                d3.select(this).style("opacity", 0.8);
            })
            .on("mouseout", function () {
                d3.select(this).style("opacity", 1);
            });

        // Add labels on top of bars
        svg.selectAll(".label")
            .data(data)
            .enter()
            .append("text")
            .attr("class", "label")
            .attr("x", (d: any) => (x(d.label) as number) + x.bandwidth() / 2)
            .attr("y", (d: any) => y(d.value) - 5)
            .attr("text-anchor", "middle")
            .text((d: any) => d.value)
            .style("font-family", "IBM Plex Serif, serif")
            .style("font-size", "10px")
            .style("fill", "#d4d4d8"); // zinc-300
    }
</script>
