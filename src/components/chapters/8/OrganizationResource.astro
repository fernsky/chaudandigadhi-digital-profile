---
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import type { Language } from "../../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type OrganizationSection = {
    title: string;
    number: string;
    subTitle: string;
    subNumber: string;
    imageCaption: string;
};

const organization = (await loadChapterSection(
    8,
    "organization",
    lang
)) as OrganizationSection;
---

<!-- 8.1 Organizational and Human Resource Status -->
{
    organization && (
        <section id="organization" class="relative bg-[#050505] pb-8 md:pb-12">
            <div class="container mx-auto px-8">
                <div class="max-w-4xl mx-auto">
                    <!-- 8.1 Header -->
                    <div class="mb-8">
                        <h2 class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6">
                            {organization.number} {organization.title}
                        </h2>
                    </div>

                    <!-- 8.1.1 Subsection -->
                    <div id="organizational-structure" class="mb-10">
                        <h3 class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6">
                            {organization.subNumber} {organization.subTitle}
                        </h3>
                        
                        <!-- Image Placeholder -->
                        <figure class="mb-10">
                            <div class="w-full h-[600px] bg-zinc-800 rounded flex items-center justify-center text-zinc-500 mb-4 border border-[#f2e25d]/10">
                                <span class="font-serif italic text-lg">[Image: {organization.imageCaption}]</span>
                            </div>
                            <figcaption class="text-center font-bold text-zinc-200 font-serif text-lg md:text-xl">
                                {organization.imageCaption}
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>
        </section>
    )
}
