---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const content = await loadChapterSection(5, "peace-security-details", lang);
if (!content) throw new Error("Peace security details content not found");
---

<section
    id="peace-security-details"
    class="relative bg-[#050505] py-8 md:py-12"
>
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h2
                class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h2>
            <div
                class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-8 text-center"
            >
                <div class="text-[#f2e25d] font-serif text-6xl font-bold">
                    {content.securityForces}
                </div>
                <p class="text-zinc-100 font-serif text-sm mt-2">
                    सुरक्षा निकाय
                </p>
            </div>
            <p class="text-zinc-400 font-serif text-sm italic mt-4">
                {lang === "ne" ? "स्रोत" : "Source"}: {content.source}
            </p>
        </div>
    </div>
</section>
