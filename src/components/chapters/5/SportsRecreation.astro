---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const content = await loadChapterSection(5, "sports-recreation", lang);
---

{
    content && (
        <section
            id="sports-recreation"
            class="relative bg-[#050505] py-8 md:py-12"
        >
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <h3 class="font-serif text-2xl font-medium text-zinc-100 mb-6">
                        {content.sectionId} {content.title}
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-8 text-center">
                            <div class="text-[#f2e25d] font-serif text-5xl font-bold">
                                {content.sportsVenues}
                            </div>
                            <p class="text-zinc-100 font-serif text-sm mt-2">
                                खेलमैदान
                            </p>
                        </div>
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-8 text-center">
                            <div class="text-[#f2e25d] font-serif text-5xl font-bold">
                                {content.parks}
                            </div>
                            <p class="text-zinc-100 font-serif text-sm mt-2">
                                पार्क
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    )
}
