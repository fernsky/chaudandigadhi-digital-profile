---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type EducationalOverviewContent = {
    title: string;
    sectionId: string;
    intro: string[];
    constitutionalRights: {
        title: string;
        rights: Array<{
            number: string;
            text: string;
        }>;
    };
    conclusion: string[];
    mapReference: {
        title: string;
        imagePath: string;
    };
};

const content = await loadChapterSection<EducationalOverviewContent>(
    5,
    "educational-overview",
    lang,
);

if (!content) {
    throw new Error("Educational overview content not found");
}
---

<section id="educational-overview" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {formatNumber(content.sectionId, lang)}
                    {content.title}
                </h2>
            </div>

            <!-- Intro Paragraphs -->
            <div class="space-y-4 mb-8">
                {
                    content.intro.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>

            <!-- Constitutional Rights Box -->
            <div
                class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6 md:p-8 mb-8"
            >
                <h3
                    class="font-serif text-xl md:text-2xl text-[#f2e25d] font-medium mb-6"
                >
                    {content.constitutionalRights.title}
                </h3>
                <div class="space-y-4">
                    {
                        content.constitutionalRights.rights.map((right) => (
                            <div class="flex gap-4">
                                <span class="text-[#f2e25d] font-serif font-bold flex-shrink-0">
                                    {formatNumber(right.number, lang)}.
                                </span>
                                <p class="text-zinc-100 font-serif text-base md:text-lg leading-relaxed">
                                    {right.text}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Conclusion Paragraphs -->
            <div class="space-y-4 mb-8">
                {
                    content.conclusion.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>

            <!-- Education Map -->
            <div class="mb-6">
                <h4 class="font-serif text-xl text-zinc-100 font-medium mb-4">
                    {content.mapReference.title}
                </h4>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-4">
                    <img
                        src={content.mapReference.imagePath}
                        alt={content.mapReference.title}
                        class="w-full h-auto"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
