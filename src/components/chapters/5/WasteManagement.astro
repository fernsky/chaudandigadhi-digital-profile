---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const wasteContent = await loadChapterSection(5, "waste-management", lang);
---

{
    wasteContent && (
        <section
            id="waste-management"
            class="relative bg-[#050505] py-8 md:py-12"
        >
            <div class="container mx-auto px-8">
                <div class="max-w-4xl mx-auto">
                    <h3 class="font-serif text-2xl font-medium text-zinc-100 mb-6">
                        рел.рей.рек {wasteContent.title}
                    </h3>
                    <div class="space-y-3">
                        {wasteContent.problems.map((problem: string) => (
                            <div class="bg-[#0a0a0a] border border-zinc-700/20 p-4">
                                <p class="text-zinc-100 font-serif text-sm">
                                    {problem}
                                </p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>
    )
}
