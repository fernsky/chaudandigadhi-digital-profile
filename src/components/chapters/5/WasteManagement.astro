---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/waste-management/ne.json";
import en from "../../../lib/i18n/chapters/5/waste-management/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>

        {
            t.content.map((paragraph, index) => (
                <p
                    class={`text-lg text-zinc-300 leading-relaxed text-justify mb-6 ${index > 0 && index < 6 ? "pl-4 border-l-2 border-zinc-700" : ""}`}
                >
                    {paragraph}
                </p>
            ))
        }
    </div>
</section>
