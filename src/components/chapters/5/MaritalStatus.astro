---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

type MaritalStatusContent = {
    title: string;
    sectionId: string;
    married: number;
    unmarried: number;
    widowed: number;
    divorced: number;
    separated: number;
    source: string;
};

const content = await loadChapterSection<MaritalStatusContent>(
    5,
    "marital-status",
    lang,
);
if (!content) throw new Error("Marital status content not found");
---

<section id="marital-status" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {formatNumber(content.sectionId, lang)}
                {content.title}
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div class="text-[#f2e25d] font-serif text-3xl font-bold">
                        {formatNumber(content.married, lang)}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm mt-2">
                        {lang === "ne" ? "विवाहित" : "Married"}
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div class="text-[#f2e25d] font-serif text-3xl font-bold">
                        {formatNumber(content.unmarried, lang)}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm mt-2">
                        {lang === "ne" ? "अविवाहित" : "Unmarried"}
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div class="text-[#f2e25d] font-serif text-3xl font-bold">
                        {formatNumber(content.widowed, lang)}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm mt-2">
                        {lang === "ne" ? "विधवा/विधुर" : "Widowed"}
                    </div>
                </div>
            </div>
            <p class="text-zinc-400 font-serif text-sm italic mt-6">
                {lang === "ne" ? "स्रोत" : "Source"}: {content.source}
            </p>
        </div>
    </div>
</section>
