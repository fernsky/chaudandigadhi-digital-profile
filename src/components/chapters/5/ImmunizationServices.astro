---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import VaccinationChart from "../../charts/chapter-5/VaccinationChart.astro";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

type ImmunizationServicesContent = {
    title: string;
    sectionId: string;
    vaccinationCoverage: Record<string, number>;
    source: string;
};

const content = await loadChapterSection<ImmunizationServicesContent>(
    5,
    "immunization-services",
    lang,
);
if (!content) throw new Error("Immunization services content not found");

// Transform object to array efficiently
const chartData = Object.entries(content.vaccinationCoverage).map(
    ([key, value]) => ({
        vaccine: key.replace(/_/g, " "), // Replace underscores with spaces for better display
        coverage: value,
    }),
);
---

<section id="immunization-services" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h3>
            <VaccinationChart lang={lang} data={chartData} />
            <p class="text-zinc-400 font-serif text-sm italic mt-4">
                स्रोत: {content.source}
            </p>
        </div>
    </div>
</section>
