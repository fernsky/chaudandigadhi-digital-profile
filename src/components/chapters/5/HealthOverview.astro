---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type HealthOverviewContent = {
    title: string;
    sectionId: string;
    intro: string[];
};

const content = await loadChapterSection<HealthOverviewContent>(
    5,
    "health-overview",
    lang,
);
if (!content) throw new Error("Health overview content not found");
---

<section id="health-overview" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto">
            <h2
                class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h2>

            <div class="space-y-4">
                {
                    content.intro.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
