---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/health-nutrition/ne.json";
import en from "../../../lib/i18n/chapters/5/health-nutrition/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <!-- Main Title -->
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-12">
            {t.title}
        </h2>

        <!-- First Paragraph -->
        <p class="text-lg text-zinc-300 leading-relaxed mb-12 text-justify">
            {t.content.p1}
        </p>

        <!-- Image Container -->
        <div
            class="w-full bg-zinc-900/50 rounded-xl border border-zinc-800 mb-12 flex items-center justify-center overflow-hidden group"
        >
            <img
                src="/images/chapter-5/स्वास्थ्य तथा पोषण.png"
                alt={lang === "ne"
                    ? "स्वास्थ्य तथा पोषण"
                    : "Health and Nutrition"}
                class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-500"
            />
        </div>

        <!-- Second Paragraph -->
        <p class="text-lg text-zinc-300 leading-relaxed text-justify">
            {t.content.p2}
        </p>
    </div>
</section>
