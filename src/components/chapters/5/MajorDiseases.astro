---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

type MajorDiseasesContent = {
    title: string;
    sectionId: string;
    topDiseases: string[];
    source: string;
};

const content = await loadChapterSection<MajorDiseasesContent>(
    5,
    "major-diseases",
    lang,
);
if (!content) throw new Error("Major diseases content not found");
---

<section id="major-diseases" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {
                    content.topDiseases.map((disease, index) => (
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 hover:border-[#f2e25d]/30 transition-colors">
                            <div class="flex items-center gap-4">
                                <div class="text-[#f2e25d] font-serif text-2xl font-bold">
                                    {index + 1}
                                </div>
                                <p class="text-zinc-100 font-serif text-base">
                                    {disease}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
            <p class="text-zinc-400 font-serif text-sm italic mt-6">
                स्रोत: {content.source}
            </p>
        </div>
    </div>
</section>
