---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type ChildFriendlyEducationContent = {
    title: string;
    sectionId: string;
    intro: string[];
    initiatives: string[];
};

const content = await loadChapterSection<ChildFriendlyEducationContent>(
    5,
    "child-friendly-education",
    lang,
);
if (!content) throw new Error("Child-friendly education content not found");
---

<section
    id="child-friendly-education"
    class="relative bg-[#050505] py-8 md:py-12"
>
    <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h3>

            <div class="space-y-4 mb-6">
                {
                    content.intro.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {
                    content.initiatives.map((initiative) => (
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 hover:border-[#f2e25d]/30 transition-colors">
                            <div class="flex items-start gap-3">
                                <div class="text-[#f2e25d] text-xl">âœ“</div>
                                <p class="text-zinc-100 font-serif text-base">
                                    {initiative}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
