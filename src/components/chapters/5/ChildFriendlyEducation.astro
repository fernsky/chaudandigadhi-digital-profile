---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/child-friendly-education/ne.json";
import en from "../../../lib/i18n/chapters/5/child-friendly-education/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <!-- Main Title -->
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>

        <!-- Introduction -->
        <p class="text-lg text-zinc-300 leading-relaxed mb-8">
            {t.intro}
        </p>

        <!-- Efforts Title -->
        <h3 class="text-xl font-serif text-white/80 mb-6">
            {t.effortsTitle}
        </h3>

        <!-- Efforts List -->
        <div class="space-y-4">
            {
                t.efforts.map((effort, index) => (
                    <div class="flex items-start gap-4 group">
                        <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary-500/10 border border-primary-500/30 flex items-center justify-center mt-1 group-hover:bg-primary-500/20 transition-colors">
                            <span class="text-primary-400 font-medium text-sm">
                                {index + 1}
                            </span>
                        </div>
                        <p class="flex-1 text-lg text-zinc-300 leading-relaxed group-hover:text-white transition-colors">
                            {effort}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
