---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/youth-clubs/ne.json";
import en from "../../../lib/i18n/chapters/5/youth-clubs/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>

        <h3 class="text-lg font-serif text-white/80 mb-6 text-center">
            {t.tableTitle}
        </h3>
        <div
            class="rounded-lg overflow-hidden border border-zinc-800 mb-8 w-full"
        >
            <div class="overflow-x-auto">
                <table
                    class="w-full text-sm text-center text-zinc-100 border-collapse"
                >
                    <thead class="bg-blue-600/90 text-white">
                        <tr>
                            {
                                t.headers.map((header) => (
                                    <th class="px-4 py-3 font-serif font-medium border-r border-white/20 whitespace-nowrap">
                                        {header}
                                    </th>
                                ))
                            }
                        </tr>
                    </thead>
                    <tbody>
                        {
                            t.rows.map((row, index) => (
                                <tr
                                    class={`border-b border-zinc-800 ${index % 2 === 0 ? "bg-zinc-900/30" : "bg-transparent"} hover:bg-zinc-800/50 transition-colors`}
                                >
                                    <td class="px-4 py-3 text-zinc-300 font-medium border-r border-zinc-800">
                                        {row[0]}
                                    </td>
                                    <td class="px-4 py-3 text-left font-medium text-white border-r border-zinc-800">
                                        {row[1]}
                                    </td>
                                    <td class="px-4 py-3 text-zinc-300">
                                        {row[2]}
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <p class="text-sm text-zinc-400 mt-2 text-right italic mb-4 w-full">
            {t.source}
        </p>
    </div>
</section>
