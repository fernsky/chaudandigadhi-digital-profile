---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const content = await loadChapterSection(5, "youth-clubs", lang);
---

{
    content && (
        <section id="youth-clubs" class="relative bg-[#050505] py-8 md:py-12">
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <h3 class="font-serif text-2xl font-medium text-zinc-100 mb-6">
                        {content.sectionId} {content.title}
                    </h3>
                    <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-8 text-center mb-8">
                        <div class="text-[#f2e25d] font-serif text-6xl font-bold">
                            {content.youthClubs}
                        </div>
                        <p class="text-zinc-100 font-serif text-sm mt-2">
                            युवा क्लब
                        </p>
                    </div>

                    {/* Gallery */}
                    {content.gallery && content.gallery.length > 0 && (
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                            {content.gallery.map((image: any) => (
                                <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-2 group hover:border-[#f2e25d]/30 transition-colors">
                                    <div class="aspect-video relative overflow-hidden bg-zinc-900">
                                        <img
                                            src={image.imagePath}
                                            alt={image.caption}
                                            class="object-cover w-full h-full opacity-70 group-hover:opacity-100 transition-opacity duration-500"
                                        />
                                    </div>
                                    <div class="mt-2 text-center">
                                        <p class="text-zinc-400 font-serif text-xs italic group-hover:text-zinc-300 transition-colors">
                                            {image.caption}
                                        </p>
                                    </div>
                                </div>
                            ))}
                        </div>
                    )}
                </div>
            </div>
        </section>
    )
}
