---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

const content = await loadChapterSection(5, "youth-sports", lang);

if (!content) {
    throw new Error("Youth sports section content not found");
}
---

<section id="youth-sports" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full space-y-12">
            <!-- Youth & Sports Header -->
            <div class="space-y-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100"
                >
                    {formatNumber("5.4", lang)}
                    {content.title}
                </h2>
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Sports Venues -->
            <div id="sports-venues" class="space-y-6">
                <h3
                    class="font-serif text-2xl md:text-3xl text-zinc-100 font-medium"
                >
                    {formatNumber("5.4.1", lang)}
                    {content.sportsVenues.title}
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        content.sportsVenues.venues.map((venue: any) => (
                            <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 hover:border-[#f2e25d]/30 transition-all">
                                <div class="text-[#f2e25d] font-bold mb-3">
                                    {lang === "ne" ? "वडा नं." : "Ward No."}{" "}
                                    {formatNumber(venue.ward, lang)}
                                </div>
                                <ul class="space-y-2">
                                    {venue.facilities.map(
                                        (facility: string) => (
                                            <li class="text-zinc-100 font-serif text-sm flex items-start">
                                                <span class="mr-2 text-[#f2e25d]">
                                                    •
                                                </span>
                                                <span>{facility}</span>
                                            </li>
                                        ),
                                    )}
                                </ul>
                            </div>
                        ))
                    }
                </div>

                <!-- Sports Images -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
                    {
                        content.sportsVenues.images.map((img: any) => (
                            <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-4 group hover:border-[#f2e25d]/30 transition-all">
                                <div class="aspect-[16/9] bg-[#050505] mb-3 flex items-center justify-center border border-[#f2e25d]/5">
                                    <img
                                        src={img.path}
                                        alt={img.title}
                                        class="w-full h-full object-cover"
                                        loading="lazy"
                                    />
                                </div>
                                <p class="text-zinc-100 font-serif text-sm text-center">
                                    {img.title}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Parks & Recreation -->
            <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 md:p-8">
                <h4 class="font-serif text-xl text-zinc-100 font-medium mb-4">
                    {content.parksRecreation.title}
                </h4>
                <p
                    class="text-zinc-100 font-serif text-base md:text-lg font-light mb-6"
                >
                    {content.parksRecreation.intro}
                </p>
                <div
                    class="aspect-[16/9] bg-[#050505] flex items-center justify-center border border-[#f2e25d]/5"
                >
                    <img
                        src={content.parksRecreation.image.path}
                        alt={content.parksRecreation.image.title}
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                </div>
            </div>

            <!-- Youth Clubs -->
            <div id="youth-clubs" class="space-y-4">
                <h3
                    class="font-serif text-2xl md:text-3xl text-zinc-100 font-medium"
                >
                    {formatNumber("5.4.2", lang)}
                    {content.youthClubs.title}
                </h3>
                <div
                    class="bg-[#0a0a0a] border border-[#f2e25d]/10 overflow-hidden"
                >
                    <table class="w-full">
                        <thead
                            class="bg-[#050505] border-b border-[#f2e25d]/20"
                        >
                            <tr>
                                <th
                                    class="px-4 py-3 text-left font-serif text-sm text-zinc-100"
                                    >{lang === "ne" ? "क्र.सं." : "SN"}</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-sm text-zinc-100"
                                    >{
                                        lang === "ne"
                                            ? "युवा क्लबको नाम"
                                            : "Youth Club Name"
                                    }</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-sm text-zinc-100"
                                    >{lang === "ne" ? "वडा नं" : "Ward No"}</th
                                >
                            </tr>
                        </thead>
                        <tbody>
                            {
                                content.youthClubs.clubs.map((club: any) => (
                                    <tr class="border-b border-[#f2e25d]/5 hover:bg-[#050505] transition-colors">
                                        <td class="px-4 py-3 font-serif text-sm text-zinc-100">
                                            {formatNumber(club.sn, lang)}
                                        </td>
                                        <td class="px-4 py-3 font-serif text-sm text-zinc-100">
                                            {club.name}
                                        </td>
                                        <td class="px-4 py-3 font-serif text-sm text-zinc-100">
                                            {formatNumber(club.ward, lang)}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
