---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import SchoolEnrollmentChart from "../../charts/chapter-5/SchoolEnrollmentChart.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type StudentEnrollmentContent = {
    title: string;
    sectionId: string;
    intro: string[];
    table42Title: string;
    summary: {
        totalCommunitySchools: number;
        totalInstitutionalSchools: number;
        totalSchools: number;
    };
    enrollmentData: {
        level: string;
        community: number;
        institutional: number;
    }[];
    source: string;
};

const content = await loadChapterSection<StudentEnrollmentContent>(
    5,
    "student-enrollment",
    lang,
);

if (!content) {
    throw new Error("Student enrollment content not found");
}
---

<section id="student-enrollment" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <div class="mb-6">
                <h3
                    class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-4"
                >
                    {content.sectionId}
                    {content.title}
                </h3>
            </div>

            <div class="space-y-4 mb-6">
                {
                    content.intro.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>

            <div class="mb-8">
                <SchoolEnrollmentChart
                    lang={lang}
                    data={content.enrollmentData}
                />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div
                        class="text-[#f2e25d] font-serif text-4xl font-bold mb-2"
                    >
                        {content.summary.totalCommunitySchools}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm">
                        सामुदायिक विद्यालय
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div
                        class="text-[#f2e25d] font-serif text-4xl font-bold mb-2"
                    >
                        {content.summary.totalInstitutionalSchools}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm">
                        संस्थागत विद्यालय
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                    <div
                        class="text-[#f2e25d] font-serif text-4xl font-bold mb-2"
                    >
                        {content.summary.totalSchools}
                    </div>
                    <div class="text-zinc-100 font-serif text-sm">
                        कुल विद्यालय
                    </div>
                </div>
            </div>

            <p class="text-zinc-400 font-serif text-sm italic">
                {lang === "ne" ? "स्रोत" : "Source"}: {content.source}
            </p>
        </div>
    </div>
</section>
