---
import type { Language } from "../../../lib/i18n";
import { loadChapterSections } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";
import WaterSourceChart from "../../charts/chapter-5/WaterSourceChart.astro";
import ToiletCoverageChart from "../../charts/chapter-5/ToiletCoverageChart.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

const subsections = await loadChapterSections(
    5,
    ["water-sanitation", "water-sources", "toilet-facilities", "waste-management"],
    lang,
);
---

<section id="water-sanitation" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full space-y-12">
            <!-- Water & Sanitation Header -->
            {
                subsections["water-sanitation"] && (
                    <div class="space-y-6">
                        <h2 class="font-serif text-3xl md:text-4xl font-medium text-zinc-100">
                            {formatNumber("5.3", lang)} {subsections["water-sanitation"].title}
                        </h2>
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {subsections["water-sanitation"].intro}
                        </p>

                        <!-- SDG Target -->
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 md:p-8">
                            <h4 class="font-serif text-xl text-zinc-100 font-medium mb-4">
                                {subsections["water-sanitation"].sdgTarget.goal}: {subsections["water-sanitation"].sdgTarget.description}
                            </h4>
                            <div class="flex flex-wrap gap-4">
                                <div class="bg-[#050505] p-4 border border-[#f2e25d]/5">
                                    <div class="text-[#f2e25d] text-2xl font-bold">{formatNumber(subsections["water-sanitation"].sdgTarget.baseline2015, lang)}%</div>
                                    <div class="text-zinc-400 font-serif text-xs">{lang === "ne" ? "२०१५ (आधार वर्ष)" : "2015 (Baseline Year)"}</div>
                                </div>
                                <div class="bg-[#050505] p-4 border border-[#f2e25d]/5">
                                    <div class="text-[#f2e25d] text-2xl font-bold">{formatNumber(subsections["water-sanitation"].sdgTarget.target2030, lang)}%</div>
                                    <div class="text-zinc-400 font-serif text-xs">{lang === "ne" ? "२०३० (लक्ष्य)" : "2030 (Target)"}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                )
            }

            <!-- Water Sources -->
            {
                subsections["water-sources"] && (
                    <div id="water-sources" class="space-y-6">
                        <h3 class="font-serif text-2xl md:text-3xl text-zinc-100 font-medium">
                            {formatNumber("5.3.1", lang)} {subsections["water-sources"].title}
                        </h3>
                        <p class="text-zinc-100 font-serif text-base md:text-lg font-light">
                            {subsections["water-sources"].analysis}
                        </p>

                        <div class="my-8">
                            <WaterSourceChart lang={lang} />
                        </div>
                    </div>
                )
            }

            <!-- Toilet Facilities -->
            {
                subsections["toilet-facilities"] && (
                    <div id="toilet-facilities" class="space-y-6">
                        <h3 class="font-serif text-2xl md:text-3xl text-zinc-100 font-medium">
                            {formatNumber("5.3.2", lang)} {subsections["toilet-facilities"].title}
                        </h3>
                        <p class="text-zinc-100 font-serif text-base md:text-lg font-light">
                            {subsections["toilet-facilities"].intro}
                        </p>

                        <div class="my-8">
                            <ToiletCoverageChart lang={lang} />
                        </div>

                        <!-- Public Toilets -->
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 md:p-8">
                            <h4 class="font-serif text-xl text-zinc-100 font-medium mb-4">
                                {subsections["toilet-facilities"].publicToilets.title}
                            </h4>
                            <div class="space-y-3">
                                {subsections["toilet-facilities"].publicToilets.locations.map((location: any) => (
                                    <div class="flex items-center justify-between bg-[#050505] p-4 border border-[#f2e25d]/5">
                                        <div>
                                            <span class="text-zinc-100 font-serif text-sm">{location.location}</span>
                                            <span class="text-zinc-400 font-serif text-xs ml-2">({lang === "ne" ? "वडा नं." : "Ward No."} {formatNumber(location.ward, lang)})</span>
                                        </div>
                                        <div class="text-[#f2e25d] font-bold">{formatNumber(location.count, lang)}</div>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                )
            }

            <!-- Waste Management -->
            {
                subsections["waste-management"] && (
                    <div id="waste-management" class="space-y-6">
                        <h3 class="font-serif text-2xl md:text-3xl text-zinc-100 font-medium">
                            {formatNumber("5.3.4", lang)} {subsections["waste-management"].title}
                        </h3>
                        <p class="text-zinc-100 font-serif text-base md:text-lg font-light">
                            {subsections["waste-management"].intro}
                        </p>

                        <!-- Problems -->
                        <div class="bg-[#0a0a0a] border border-red-500/20 p-6 md:p-8">
                            <h4 class="font-serif text-lg text-zinc-100 font-medium mb-4">
                                {lang === "ne" ? "समस्याहरू:" : "Problems:"}
                            </h4>
                            <ul class="space-y-2">
                                {subsections["waste-management"].problems.map((problem: string) => (
                                    <li class="text-zinc-100 font-serif text-sm md:text-base font-light flex items-start">
                                        <span class="mr-3 text-red-400">•</span>
                                        <span>{problem}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <!-- Recommendations -->
                        <div class="bg-[#0a0a0a] border border-green-500/20 p-6 md:p-8">
                            <h4 class="font-serif text-lg text-zinc-100 font-medium mb-4">
                                {lang === "ne" ? "सिफारिसहरू:" : "Recommendations:"}
                            </h4>
                            <ul class="space-y-2">
                                {subsections["waste-management"].recommendations.map((rec: string) => (
                                    <li class="text-zinc-100 font-serif text-sm md:text-base font-light flex items-start">
                                        <span class="mr-3 text-green-400">•</span>
                                        <span>{rec}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                )
            }
        </div>
    </div>
</section>
