---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/married-unmarried-details/ne.json";
import en from "../../../lib/i18n/chapters/5/married-unmarried-details/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>

        <div class="mb-8 w-full">
            <h3 class="text-lg font-serif text-white/80 mb-6 text-center">
                {t.tableTitle}
            </h3>
            <div class="rounded-lg overflow-hidden border border-zinc-800">
                <div class="overflow-x-auto">
                    <table
                        class="w-full text-sm text-center text-zinc-100 border-collapse"
                    >
                        <thead class="bg-lime-600/90 text-white">
                            <tr>
                                {
                                    t.headers.map((header, index) => (
                                        <th
                                            class={`px-4 py-3 font-serif font-medium border-r border-white/20 ${index === 1 ? "text-left" : ""}`}
                                        >
                                            {header}
                                        </th>
                                    ))
                                }
                            </tr>
                        </thead>
                        <tbody>
                            {
                                t.rows.map((row, index) => (
                                    <tr
                                        class={`border-b border-zinc-800 ${index % 2 === 0 ? "bg-zinc-900/30" : "bg-transparent"} hover:bg-zinc-800/50 transition-colors`}
                                    >
                                        <td class="px-4 py-3 text-zinc-300 font-medium border-r border-zinc-800">
                                            {row[0]}
                                        </td>
                                        <td class="px-4 py-3 text-left font-medium text-white border-r border-zinc-800">
                                            {row[1]}
                                        </td>
                                        <td class="px-4 py-3 text-zinc-300 border-r border-zinc-800">
                                            {row[2]}
                                        </td>
                                        <td class="px-4 py-3 text-zinc-300 border-r border-zinc-800">
                                            {row[3]}
                                        </td>
                                        <td class="px-4 py-3 text-zinc-300 border-r border-zinc-800">
                                            {row[4]}
                                        </td>
                                        <td class="px-4 py-3 text-zinc-300">
                                            {row[5]}
                                        </td>
                                    </tr>
                                ))
                            }
                            <tr class="bg-lime-900/40 font-bold text-lime-100">
                                <td
                                    colspan="2"
                                    class="px-4 py-3 text-right border-r border-zinc-800"
                                    >{t.totalRow[0]}</td
                                >
                                <td class="px-4 py-3 border-r border-zinc-800"
                                    >{t.totalRow[1]}</td
                                >
                                <td class="px-4 py-3 border-r border-zinc-800"
                                    >{t.totalRow[2]}</td
                                >
                                <td class="px-4 py-3 border-r border-zinc-800"
                                    >{t.totalRow[3]}</td
                                >
                                <td class="px-4 py-3">{t.totalRow[4]}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <p class="text-sm text-zinc-400 mt-2 text-right italic">
                {t.source}
            </p>
        </div>
    </div>
</section>
