---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

type SafeMotherhoodContent = {
    title: string;
    sectionId: string;
    familyPlanning: {
        title: string;
        methods: string[];
    };
    source: string;
};

const content = await loadChapterSection<SafeMotherhoodContent>(
    5,
    "safe-motherhood",
    lang,
);
if (!content) throw new Error("Safe motherhood content not found");
---

<section id="safe-motherhood" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h3>
            <h4 class="font-serif text-xl text-zinc-100 font-medium mb-4">
                {content.familyPlanning.title}
            </h4>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {
                    content.familyPlanning.methods.map((method) => (
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-4 text-center hover:border-[#f2e25d]/30 transition-colors">
                            <p class="text-zinc-100 font-serif text-sm">
                                {method}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
