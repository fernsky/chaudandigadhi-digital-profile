---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type TeachersStaffContent = {
    title: string;
    sectionId: string;
    teachersByLevel: {
        primary: {
            permanent: number;
            contract: number;
            total: number;
            relief: number;
            grandTotal: number;
        };
        lowerSecondary: {
            permanent: number;
            contract: number;
            total: number;
            relief: number;
            grandTotal: number;
        };
        secondary: {
            permanent: number;
            contract: number;
            total: number;
            relief: number;
            grandTotal: number;
        };
        higherSecondary: {
            permanent: number;
            contract: number;
            total: number;
            relief: number;
            grandTotal: number;
        };
        trainers: {
            permanent: number;
            contract: number;
            total: number;
            relief: number;
            grandTotal: number;
        };
    };
    supportStaff: {
        earlyChildhoodFacilitators: number;
        municipalFacilitators: number;
        communityMobilizers: number;
        accountAssistants: number;
        schoolStaff: number;
        classAides: number;
        nurses: number;
        federalGrant: number;
        totalMunicipalStaff: number;
    };
};

const content = await loadChapterSection<TeachersStaffContent>(
    5,
    "teachers-staff",
    lang,
);
if (!content) throw new Error("Teachers staff content not found");
---

<section id="teachers-staff" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {formatNumber("5.1.4", lang)}
                {content.title}
            </h3>

            <div class="overflow-x-auto mb-8">
                <table
                    class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                >
                    <thead>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th
                                class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "तह" : "Level"}</th
                            >
                            <th
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "स्थायी" : "Permanent"}</th
                            >
                            <th
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "करार" : "Contract"}</th
                            >
                            <th
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "जम्मा" : "Total"}</th
                            >
                            <th
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "राहत" : "Relief"}</th
                            >
                            <th
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium"
                                >{
                                    lang === "ne" ? "कुल जम्मा" : "Grand Total"
                                }</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        <tr
                            class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5"
                                >{lang === "ne" ? "प्राथमिक" : "Primary"}</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.primary
                                            .permanent,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.primary
                                            .contract,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.primary.total,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.primary.relief,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-[#f2e25d] font-bold text-center"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.primary
                                            .grandTotal,
                                        lang,
                                    )
                                }</td
                            >
                        </tr>
                        <tr
                            class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5"
                                >{
                                    lang === "ne"
                                        ? "निम्न माध्यमिक"
                                        : "Lower Secondary"
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.lowerSecondary
                                            .permanent,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.lowerSecondary
                                            .contract,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.lowerSecondary
                                            .total,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.lowerSecondary
                                            .relief,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-[#f2e25d] font-bold text-center"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.lowerSecondary
                                            .grandTotal,
                                        lang,
                                    )
                                }</td
                            >
                        </tr>
                        <tr
                            class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5"
                                >{lang === "ne" ? "माध्यमिक" : "Secondary"}</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.secondary
                                            .permanent,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.secondary
                                            .contract,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.secondary.total,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-center border-r border-[#f2e25d]/5"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.secondary
                                            .relief,
                                        lang,
                                    )
                                }</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-[#f2e25d] font-bold text-center"
                                >{
                                    formatNumber(
                                        content.teachersByLevel.secondary
                                            .grandTotal,
                                        lang,
                                    )
                                }</td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-4">
                    <div class="text-[#f2e25d] font-serif text-2xl font-bold">
                        {
                            formatNumber(
                                content.supportStaff.earlyChildhoodFacilitators,
                                lang,
                            )
                        }
                    </div>
                    <div class="text-zinc-100 font-serif text-xs mt-1">
                        {
                            lang === "ne"
                                ? "बाल विकास सहजकर्ता"
                                : "EC Facilitators"
                        }
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-4">
                    <div class="text-[#f2e25d] font-serif text-2xl font-bold">
                        {
                            formatNumber(
                                content.supportStaff.municipalFacilitators,
                                lang,
                            )
                        }
                    </div>
                    <div class="text-zinc-100 font-serif text-xs mt-1">
                        {
                            lang === "ne"
                                ? "नगर सहजकर्ता"
                                : "Municipal Facilitators"
                        }
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-4">
                    <div class="text-[#f2e25d] font-serif text-2xl font-bold">
                        {
                            formatNumber(
                                content.supportStaff.accountAssistants,
                                lang,
                            )
                        }
                    </div>
                    <div class="text-zinc-100 font-serif text-xs mt-1">
                        {lang === "ne" ? "लेखा सहायक" : "Account Assistants"}
                    </div>
                </div>
                <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-4">
                    <div class="text-[#f2e25d] font-serif text-2xl font-bold">
                        {
                            formatNumber(
                                content.supportStaff.totalMunicipalStaff,
                                lang,
                            )
                        }
                    </div>
                    <div class="text-zinc-100 font-serif text-xs mt-1">
                        {lang === "ne" ? "कुल जनशक्ति" : "Total Manpower"}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
