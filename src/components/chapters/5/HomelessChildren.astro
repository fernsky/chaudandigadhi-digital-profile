---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const homelessContent = await loadChapterSection(5, "homeless-children", lang);
---

{
    homelessContent && (
        <section
            id="homeless-children"
            class="relative bg-[#050505] py-8 md:py-12"
        >
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <h3 class="font-serif text-2xl font-medium text-zinc-100 mb-6">
                        {homelessContent.sectionId} {homelessContent.title}
                    </h3>
                    <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                        <p class="text-zinc-100 font-serif text-base leading-relaxed">
                            {homelessContent.constitutionalProvision}
                        </p>
                    </div>
                </div>
            </div>
        </section>
    )
}
