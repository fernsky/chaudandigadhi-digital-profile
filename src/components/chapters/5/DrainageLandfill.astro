---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}
const { lang } = Astro.props;

const drainageContent = await loadChapterSection(5, "drainage-landfill", lang);
---

{
    drainageContent && (
        <section
            id="drainage-landfill"
            class="relative bg-[#050505] py-8 md:py-12"
        >
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <h3 class="font-serif text-2xl font-medium text-zinc-100 mb-6">
                        {drainageContent.sectionId} {drainageContent.title}
                    </h3>
                    <div class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-6">
                        <p class="text-zinc-100 font-serif">
                            <span class="text-[#f2e25d] font-bold">स्थान:</span>{" "}
                            {drainageContent.landfillSite.location}
                        </p>
                        <p class="text-zinc-100 font-serif mt-2">
                            <span class="text-[#f2e25d] font-bold">
                                स्थिति:
                            </span>{" "}
                            {drainageContent.landfillSite.status}
                        </p>
                    </div>
                </div>
            </div>
        </section>
    )
}
