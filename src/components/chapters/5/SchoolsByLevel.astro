---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type SchoolsByLevelContent = {
    title: string;
    sectionId: string;
    communitySchools: {
        title: string;
        schools: Array<{
            sn: string;
            name: string;
            address: string;
        }>;
        source: string;
    };
    institutionalSchools: {
        title: string;
        schools: Array<{
            sn: string;
            name: string;
            address: string;
            students: number;
        }>;
        source: string;
    };
};

const content = await loadChapterSection<SchoolsByLevelContent>(
    5,
    "schools-by-level",
    lang,
);

if (!content) {
    throw new Error("Schools by level content not found");
}
---

<section id="schools-by-level" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h3
                    class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-4"
                >
                    {formatNumber(content.sectionId, lang)}
                    {content.title}
                </h3>
            </div>

            <!-- Community Schools -->
            <div class="mb-12">
                <h4
                    class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-6"
                >
                    {content.communitySchools.title}
                </h4>

                <div class="overflow-x-auto mb-4">
                    <table
                        class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                    >
                        <thead>
                            <tr
                                class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20"
                            >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10 w-16"
                                    >{lang === "ne" ? "क्र.सं." : "SN"}</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >{
                                        lang === "ne"
                                            ? "विद्यालयको नाम"
                                            : "School Name"
                                    }</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium"
                                    >{lang === "ne" ? "ठेगाना" : "Address"}</th
                                >
                            </tr>
                        </thead>
                        <tbody>
                            {
                                content.communitySchools.schools.map(
                                    (school: any) => (
                                        <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {formatNumber(school.sn, lang)}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {school.name}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100">
                                                {school.address}
                                            </td>
                                        </tr>
                                    ),
                                )
                            }
                        </tbody>
                    </table>
                </div>

                <p class="text-zinc-400 font-serif text-sm italic">
                    {lang === "ne" ? "स्रोत" : "Source"}: {
                        content.communitySchools.source
                    }
                </p>
            </div>

            <!-- Institutional Schools -->
            <div class="mb-8">
                <h4
                    class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-6"
                >
                    {content.institutionalSchools.title}
                </h4>

                <div class="overflow-x-auto mb-4">
                    <table
                        class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                    >
                        <thead>
                            <tr
                                class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20"
                            >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10 w-16"
                                    >{lang === "ne" ? "क्र.सं." : "SN"}</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >{
                                        lang === "ne"
                                            ? "विद्यालयको नाम"
                                            : "School Name"
                                    }</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >{lang === "ne" ? "ठेगाना" : "Address"}</th
                                >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium"
                                    >{
                                        lang === "ne"
                                            ? "विद्यार्थी संख्या"
                                            : "Student Count"
                                    }</th
                                >
                            </tr>
                        </thead>
                        <tbody>
                            {
                                content.institutionalSchools.schools.map(
                                    (school: any) => (
                                        <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {formatNumber(school.sn, lang)}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {school.name}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {school.address}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 text-right">
                                                {formatNumber(
                                                    school.students,
                                                    lang,
                                                )}
                                            </td>
                                        </tr>
                                    ),
                                )
                            }
                        </tbody>
                    </table>
                </div>

                <p class="text-zinc-400 font-serif text-sm italic">
                    {lang === "ne" ? "स्रोत" : "Source"}: {
                        content.institutionalSchools.source
                    }
                </p>
            </div>
        </div>
    </div>
</section>
