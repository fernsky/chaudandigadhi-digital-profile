---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type InternetFacilitiesContent = {
    title: string;
    sectionId: string;
    internetFacilities: {
        title: string;
        count: number;
        description: string;
    };
    source: string;
};

const content = await loadChapterSection<InternetFacilitiesContent>(
    5,
    "internet-facilities",
    lang,
);
if (!content) throw new Error("Internet facilities content not found");
---

<section id="internet-facilities" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <h3
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6"
            >
                {content.sectionId}
                {content.title}
            </h3>

            <div
                class="bg-[#0a0a0a] border border-[#f2e25d]/20 p-8 text-center"
            >
                <div class="text-[#f2e25d] font-serif text-6xl font-bold mb-4">
                    {content.internetFacilities.count}
                </div>
                <p class="text-zinc-100 font-serif text-lg">
                    {content.internetFacilities.description}
                </p>
            </div>

            <p class="text-zinc-400 font-serif text-sm italic mt-4">
                {lang === "ne" ? "स्रोत" : "Source"}: {content.source}
            </p>
        </div>
    </div>
</section>
