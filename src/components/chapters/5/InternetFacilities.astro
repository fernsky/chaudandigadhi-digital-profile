---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/internet-facilities/ne.json";
import en from "../../../lib/i18n/chapters/5/internet-facilities/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;

// Number formatter for Nepali
const formatNumber = (num: number | string | undefined) => {
    if (num === undefined || num === null) return "0";
    if (num === "") return "-";
    const str = num.toString();
    if (lang === "en") return str;
    return str.replace(/[0-9]/g, (d) => "०१२३४५६७८९"[parseInt(d)]);
};
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <!-- Main Title -->
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-12">
            {t.title}
        </h2>

        <!-- Table -->
        <div class="mb-8">
            <h3 class="text-lg font-serif text-white/80 mb-6">
                {t.tableTitle}
            </h3>
            <div class="rounded-lg overflow-hidden border border-zinc-800">
                <div class="overflow-x-auto">
                    <table
                        class="w-full text-sm text-left text-zinc-100 border-collapse"
                    >
                        <thead class="bg-green-700/80">
                            <tr>
                                <th
                                    class="px-6 py-3 font-serif font-medium text-white border-r border-white/20"
                                >
                                    {
                                        lang === "ne"
                                            ? "इन्टरनेट सुविधा उपलब्ध विद्यालयहरु"
                                            : "Schools with Internet Facilities"
                                    }
                                </th>
                                <th
                                    class="px-6 py-3 font-serif font-medium text-white text-center"
                                >
                                    {lang === "ne" ? "संख्या" : "Number"}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {
                                t.data.map((row) => (
                                    <tr class="border-b border-zinc-800 bg-zinc-900/30">
                                        <td class="px-6 py-3 font-medium text-white border-r border-zinc-800">
                                            {row.facility}
                                        </td>
                                        <td class="px-6 py-3 text-center text-white font-bold">
                                            {formatNumber(row.count)}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <p class="text-sm text-zinc-400 mt-2 text-right italic">
                {t.source}
            </p>
        </div>
    </div>
</section>
