---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/children-state/ne.json";
import en from "../../../lib/i18n/chapters/5/children-state/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>
        <p class="text-lg text-zinc-300 leading-relaxed text-justify">
            {t.content}
        </p>
    </div>
</section>
