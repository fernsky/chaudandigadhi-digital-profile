---
import type { Language } from "../../../lib/i18n";
import ne from "../../../lib/i18n/chapters/5/child-health-nutrition/ne.json";
import en from "../../../lib/i18n/chapters/5/child-health-nutrition/en.json";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = lang === "ne" ? ne : en;
---

<section
    id={t.subsectionId}
    class="relative py-20 bg-[#0a0a0a] border-t border-white/5"
>
    <div class="container mx-auto px-8 relative z-10">
        <!-- Main Title -->
        <h2 class="text-2xl md:text-3xl font-serif text-white/90 mb-8">
            {t.title}
        </h2>

        <!-- Content -->
        <p class="text-lg text-zinc-300 leading-relaxed text-justify mb-12">
            {t.content}
        </p>

        <!-- Table -->
        <div class="mb-8">
            <h3 class="text-lg font-serif text-white/80 mb-6">
                {t.tableTitle}
            </h3>
            <div class="rounded-lg overflow-hidden border border-zinc-800">
                <div class="overflow-x-auto">
                    <table
                        class="w-full text-sm text-left text-zinc-100 border-collapse"
                    >
                        <thead class="bg-orange-500/80">
                            <tr>
                                <th
                                    class="px-6 py-4 font-serif font-medium text-white border-r border-white/20"
                                >
                                    {t.headers.sn}
                                </th>
                                <th
                                    class="px-6 py-4 font-serif font-medium text-white border-r border-white/20 text-center w-40"
                                >
                                    {t.headers.col1}
                                </th>
                                <th
                                    class="px-6 py-4 font-serif font-medium text-white border-r border-white/20 text-center w-40"
                                >
                                    {t.headers.col2}
                                </th>
                                <th
                                    class="px-6 py-4 font-serif font-medium text-white text-center w-40"
                                >
                                    {t.headers.col3}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {
                                t.tableData.map((row, index) => (
                                    <tr
                                        class={`border-b border-zinc-800 ${index % 2 === 0 ? "bg-zinc-900/30" : "bg-transparent"} hover:bg-zinc-800/50 transition-colors`}
                                    >
                                        <td class="px-6 py-4 font-medium text-white border-r border-zinc-800">
                                            {row.indicator}
                                        </td>
                                        <td class="px-6 py-4 text-center text-zinc-300 border-r border-zinc-800 font-bold">
                                            {row.col1}
                                        </td>
                                        <td class="px-6 py-4 text-center text-zinc-300 border-r border-zinc-800 font-bold">
                                            {row.col2}
                                        </td>
                                        <td class="px-6 py-4 text-center text-zinc-300 font-bold">
                                            {row.col3}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <p class="text-sm text-zinc-400 mt-2 text-right italic">
                {t.source}
            </p>
        </div>
    </div>
</section>
