---
import ne from "../../../lib/i18n/chapters/4/land-agriculture/ne.json";
import LandUseChart from "../../charts/chapter-4/LandUseChart.astro";

interface Props {
    lang: string;
}
const { lang } = Astro.props;
const t = ne;
---

<section id="land-agriculture" class="py-20 bg-zinc-900">
    <div class="container mx-auto px-4">
        <!-- 4.2 LAND USE -->
        <div id="land-use" class="mb-24 scroll-mt-24">
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2
                    class="text-3xl md:text-5xl font-serif font-bold text-white mb-6"
                >
                    {t.landUse.title}
                </h2>
                <p class="text-lg text-zinc-400 leading-relaxed">
                    {t.landUse.description}
                </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
                <!-- Chart 4.2.1 -->
                <div>
                    <h3 class="text-2xl font-serif text-amber-500 mb-6">
                        {t.landUse.distribution.title}
                    </h3>
                    <LandUseChart data={t.landUse.distribution.chartData} />
                </div>

                <!-- 4.2.2 Cultivable & Irrigation -->
                <div class="space-y-8">
                    <div>
                        <h3 class="text-2xl font-serif text-white mb-4">
                            {t.landUse.cultivable.title}
                        </h3>
                        <p class="text-zinc-400 mb-6 text-justify">
                            {t.landUse.cultivable.content}
                        </p>
                    </div>

                    <div
                        class="bg-zinc-800/30 p-6 rounded-xl border border-zinc-700/50"
                    >
                        <h4 class="text-lg font-serif text-emerald-400 mb-4">
                            प्रमुख सिँचाई योजनाहरू
                        </h4>
                        <div class="grid grid-cols-2 gap-4">
                            {
                                t.landUse.cultivable.irrigationProjects.map(
                                    (p) => (
                                        <div class="flex justify-between items-center border-b border-zinc-700/50 pb-2">
                                            <span class="text-zinc-300 text-sm">
                                                {p.name}
                                            </span>
                                            <span class="text-emerald-500 font-bold text-sm">
                                                {p.area}
                                            </span>
                                        </div>
                                    ),
                                )
                            }
                        </div>
                    </div>

                    <div>
                        <h3 class="text-xl font-serif text-white mb-2">
                            {t.landUse.barren.title}
                        </h3>
                        <p class="text-zinc-400 text-justify text-sm">
                            {t.landUse.barren.content}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- 4.3 AGRICULTURE -->
        <div
            id="agriculture-livestock"
            class="border-t border-zinc-800 pt-20 scroll-mt-24"
        >
            <div class="max-w-4xl mx-auto text-center mb-16">
                <h2
                    class="text-3xl md:text-5xl font-serif font-bold text-white mb-6"
                >
                    {t.agriculture.title}
                </h2>
                <p class="text-lg text-zinc-400 leading-relaxed">
                    {t.agriculture.intro}
                </p>
            </div>

            <!-- Diseases Tables -->
            <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-16">
                <div
                    class="bg-zinc-800/20 rounded-xl p-6 border border-zinc-800"
                >
                    <h3 class="text-xl font-serif text-amber-500 mb-4">
                        {t.agriculture.diseases.crops.title}
                    </h3>
                    <div class="space-y-4">
                        {
                            t.agriculture.diseases.crops.data.map((item) => (
                                <div class="border-b border-zinc-800 pb-2 last:border-0">
                                    <span class="text-emerald-400 font-bold block mb-1">
                                        {item.crop}
                                    </span>
                                    <div class="text-xs text-zinc-400">
                                        <span class="text-zinc-500">रोग:</span>{" "}
                                        {item.diseases}
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <div
                    class="bg-zinc-800/20 rounded-xl p-6 border border-zinc-800"
                >
                    <h3 class="text-xl font-serif text-amber-500 mb-4">
                        {t.agriculture.diseases.vegFruit.title}
                    </h3>
                    <div class="space-y-4">
                        {
                            t.agriculture.diseases.vegFruit.data.map((item) => (
                                <div class="border-b border-zinc-800 pb-2 last:border-0">
                                    <span class="text-emerald-400 font-bold block mb-1">
                                        {item.crop}
                                    </span>
                                    <div class="text-xs text-zinc-400">
                                        <span class="text-zinc-500">रोग:</span>{" "}
                                        {item.diseases}
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                    <div class="mt-6 pt-4 border-t border-zinc-800">
                        <h4 class="text-lg font-serif text-white mb-2">
                            {t.agriculture.diseases.livestock.title}
                        </h4>
                        <p class="text-sm text-zinc-400 text-justify">
                            {t.agriculture.diseases.livestock.content}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Commercial Farms & HR -->
            <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
                <div>
                    <h3 class="text-2xl font-serif text-white mb-6">
                        {t.agriculture.commercial.title}
                    </h3>
                    <div
                        class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden"
                    >
                        <table class="w-full text-left text-sm text-zinc-400">
                            <thead
                                class="bg-zinc-800 text-zinc-200 uppercase font-medium"
                            >
                                <tr>
                                    <th class="px-4 py-3">वडा नं.</th>
                                    <th class="px-4 py-3">फर्मको नाम</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-zinc-800">
                                {
                                    t.agriculture.commercial.data.map((row) => (
                                        <tr class="hover:bg-zinc-800/50 transition-colors">
                                            <td class="px-4 py-3 text-center text-amber-500 font-mono">
                                                {row.ward}
                                            </td>
                                            <td class="px-4 py-3">
                                                {row.name}
                                            </td>
                                        </tr>
                                    ))
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="space-y-8">
                    <div>
                        <h3 class="text-2xl font-serif text-white mb-6">
                            {t.agriculture.humanResources.title}
                        </h3>
                        <div class="space-y-4">
                            <div class="bg-zinc-800/30 p-4 rounded-lg">
                                <h4
                                    class="text-sm font-bold text-emerald-400 mb-3 uppercase tracking-wider"
                                >
                                    कृषि शाखा
                                </h4>
                                <div class="grid gap-2">
                                    {
                                        t.agriculture.humanResources.agriculture.map(
                                            (hr) => (
                                                <div class="flex justify-between text-sm">
                                                    <span class="text-zinc-200">
                                                        {hr.name}
                                                    </span>
                                                    <span class="text-zinc-500">
                                                        {hr.designation}
                                                    </span>
                                                </div>
                                            ),
                                        )
                                    }
                                </div>
                            </div>
                            <div class="bg-zinc-800/30 p-4 rounded-lg">
                                <h4
                                    class="text-sm font-bold text-emerald-400 mb-3 uppercase tracking-wider"
                                >
                                    पशु सेवा शाखा
                                </h4>
                                <div class="grid gap-2">
                                    {
                                        t.agriculture.humanResources.livestock
                                            .slice(0, 4)
                                            .map((hr) => (
                                                <div class="flex justify-between text-sm">
                                                    <span class="text-zinc-200">
                                                        {hr.name}
                                                    </span>
                                                    <span class="text-zinc-500 text-xs text-right">
                                                        {hr.designation}
                                                        <br />
                                                        {hr.branch}
                                                    </span>
                                                </div>
                                            ))
                                    }
                                    <div
                                        class="text-center text-xs text-zinc-500 pt-2 italic"
                                    >
                                        ...र अन्य
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Collection Centers -->
                    <div
                        class="bg-amber-900/10 border border-amber-900/30 p-6 rounded-xl"
                    >
                        <h3 class="text-xl font-serif text-amber-500 mb-3">
                            {t.agriculture.collectionCenters.title}
                        </h3>
                        <p
                            class="text-sm text-zinc-400 leading-relaxed text-justify"
                        >
                            {t.agriculture.collectionCenters.content}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
