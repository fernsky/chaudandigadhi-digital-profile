---
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";
import type { Language } from "../../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type IndustrialClassificationContent = {
    title: string;
    sectionId: string;
    number: string;
    tableNumber: string;
    tableTitle: string;
    tableData: Array<{
        sector: string;
        sixMonthsOrMore: number;
        threeToFiveMonths: number;
        oneToTwoMonths: number;
        total: number;
    }>;
    total: {
        sixMonthsOrMore: number;
        threeToFiveMonths: number;
        oneToTwoMonths: number;
        total: number;
    };
    source: string;
    analysis: string;
};

const content = await loadChapterSection<IndustrialClassificationContent>(
    4,
    "industrial-classification",
    lang,
);

if (!content) {
    throw new Error("Industrial classification content not found");
}
---

<section
    id="industrial-classification"
    class="relative bg-[#050505] py-8 md:py-12"
>
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {formatNumber(content.number, lang)}
                    {content.title}
                </h2>
            </div>

            <!-- Table Title -->
            <h4
                class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-4"
            >
                {formatNumber(content.tableNumber, lang)}: {content.tableTitle}
            </h4>

            <!-- Premium Table -->
            <div class="overflow-x-auto mb-6">
                <table
                    class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                >
                    <thead>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th
                                class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{
                                    lang === "ne"
                                        ? "आर्थिक कामको क्षेत्र वा उत्पादन"
                                        : "Economic Activity Sector or Production"
                                }</th
                            >
                            <th
                                colspan="4"
                                class="px-4 py-3 text-center font-serif text-zinc-100 font-medium"
                                >{
                                    lang === "ne"
                                        ? "कामको अवधि"
                                        : "Work Duration"
                                }</th
                            >
                        </tr>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th class="px-4 py-3 border-r border-[#f2e25d]/10"
                            ></th>
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{
                                    lang === "ne"
                                        ? `${formatNumber(6, lang)} महिना वा सो भन्दा बढी`
                                        : `${formatNumber(6, lang)} Months or More`
                                }</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{
                                    lang === "ne"
                                        ? `${formatNumber(3, lang)} देखि ${formatNumber(5, lang)} महिना`
                                        : `${formatNumber(3, lang)} to ${formatNumber(5, lang)} Months`
                                }</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{
                                    lang === "ne"
                                        ? `${formatNumber(1, lang)} देखि ${formatNumber(2, lang)} महिना`
                                        : `${formatNumber(1, lang)} to ${formatNumber(2, lang)} Months`
                                }</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium"
                                >{lang === "ne" ? "जम्मा" : "Total"}</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            content.tableData.map((row: any) => (
                                <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                    <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                        {row.sector}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {formatNumber(
                                            row.sixMonthsOrMore,
                                            lang,
                                        )}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {formatNumber(
                                            row.threeToFiveMonths,
                                            lang,
                                        )}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {formatNumber(row.oneToTwoMonths, lang)}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right">
                                        {formatNumber(row.total, lang)}
                                    </td>
                                </tr>
                            ))
                        }
                        <!-- Total Row -->
                        <tr
                            class="bg-[#f2e25d]/10 border-t-2 border-[#f2e25d]/30 font-medium"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/10"
                                >{lang === "ne" ? "जम्मा" : "Total"}</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {
                                    formatNumber(
                                        content.total.sixMonthsOrMore,
                                        lang,
                                    )
                                }
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {
                                    formatNumber(
                                        content.total.threeToFiveMonths,
                                        lang,
                                    )
                                }
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {
                                    formatNumber(
                                        content.total.oneToTwoMonths,
                                        lang,
                                    )
                                }
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right"
                            >
                                {formatNumber(content.total.total, lang)}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Source -->
            <p class="text-zinc-400 font-serif text-sm italic mb-6">
                {lang === "ne" ? "स्रोत" : "Source"}: {content.source}
            </p>

            <!-- Analysis -->
            <p
                class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
            >
                {content.analysis}
            </p>
        </div>
    </div>
</section>
