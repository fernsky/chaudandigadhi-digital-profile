---
import ne from "../../../lib/i18n/chapters/4/housing/ne.json";
import HousingOwnershipChart from "../../charts/chapter-4/HousingOwnershipChart.astro";
import HousingConstructionChart from "../../charts/chapter-4/HousingConstructionChart.astro";

interface Props {
    lang: string;
}
const { lang } = Astro.props;
const t = ne;

// Configuration for Construction Charts
const foundationKeys = [
    { key: "mudStone", label: "माटोको जोडाइ", color: "#d97706" }, // amber-600
    { key: "cementStone", label: "सिमेन्टको जोडाइ", color: "#65a30d" }, // lime-600
    { key: "rcc", label: "ढलान पिल्लर", color: "#059669" }, // emerald-600
    { key: "woodenPillar", label: "काठको खम्बा", color: "#78350f" }, // amber-900 (wood)
    { key: "other", label: "अन्य", color: "#71717a" }, // zinc-500
];

const wallKeys = [
    { key: "mudStone", label: "माटोको जोडाइ", color: "#d97706" },
    { key: "cementStone", label: "सिमेन्टको जोडाइ", color: "#65a30d" },
    { key: "wood", label: "काठ", color: "#78350f" },
    { key: "bamboo", label: "बाँस", color: "#fcd34d" }, // amber-300
    { key: "zincSheet", label: "जस्तापाता", color: "#94a3b8" }, // slate-400
    { key: "unbakedBrick", label: "काँचो इँटा", color: "#fdba74" }, // orange-300
    { key: "other", label: "अन्य", color: "#71717a" },
];

const floorKeys = [
    { key: "mud", label: "माटो", color: "#d97706" },
    { key: "cement", label: "सिमेन्ट ढलान", color: "#059669" },
    { key: "woodBamboo", label: "काठ/बाँस", color: "#fcd34d" },
    { key: "brickStone", label: "इँटा/ढुङ्गा", color: "#65a30d" },
    { key: "ceramicTile", label: "टायल", color: "#8b5cf6" },
    { key: "other", label: "अन्य", color: "#71717a" },
];

const roofKeys = [
    { key: "zincSheet", label: "जस्ता/टिन", color: "#94a3b8" },
    { key: "straw", label: "खर/पराल", color: "#fcd34d" },
    { key: "rcc", label: "सिमेन्ट ढलान", color: "#059669" },
    { key: "tile", label: "टायल/खपडा", color: "#ef4444" }, // red-500
    { key: "stoneSlate", label: "ढुङ्गा/स्लेट", color: "#64748b" },
    { key: "woodPlank", label: "काठ", color: "#78350f" },
    { key: "other", label: "अन्य", color: "#71717a" },
];
---

<section id="housing-structure" class="py-20 bg-zinc-950">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
            <h2
                class="text-3xl md:text-5xl font-serif font-bold text-white mb-6"
            >
                {t.title}
            </h2>
            <p class="text-lg text-zinc-400 leading-relaxed">{t.description}</p>
        </div>

        <!-- Ownership -->
        <div
            class="grid lg:grid-cols-2 gap-12 items-center mb-24 max-w-6xl mx-auto"
        >
            <div>
                <h3 class="text-2xl font-serif text-amber-500 mb-4">
                    {t.ownership.title}
                </h3>
                <p class="text-zinc-400 leading-relaxed mb-6">
                    {t.ownership.description}
                </p>
                <p class="text-zinc-500 text-sm italic">
                    {t.ownership.subtitle}
                </p>
            </div>
            <div>
                <HousingOwnershipChart data={t.ownership.chartData} />
            </div>
        </div>

        <!-- Construction Stats -->
        <div class="max-w-7xl mx-auto">
            <h3 class="text-2xl font-serif text-center text-white mb-10">
                आवास निर्माण सामाग्री र प्रकृति
            </h3>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <HousingConstructionChart
                    title={t.foundation.title}
                    data={t.foundation.chartData}
                    keys={foundationKeys}
                />
                <HousingConstructionChart
                    title={t.outerWall.title}
                    data={t.outerWall.chartData}
                    keys={wallKeys}
                />
                <HousingConstructionChart
                    title={t.floor.title}
                    data={t.floor.chartData}
                    keys={floorKeys}
                />
                <HousingConstructionChart
                    title={t.roof.title}
                    data={t.roof.chartData}
                    keys={roofKeys}
                />
            </div>
            <p class="text-center text-zinc-600 text-sm mt-8 italic">
                स्रोत: राष्ट्रिय जनगणना, २०७८
            </p>
        </div>
    </div>
</section>
