---
import ne from "../../../lib/i18n/chapters/4/economic-overview/ne.json";
import EconomicActivitiesChart from "../../charts/chapter-4/EconomicActivitiesChart.astro";
import ForeignEmploymentChart from "../../charts/chapter-4/ForeignEmploymentChart.astro";

interface Props {
    lang: string;
}
const { lang } = Astro.props;
const t = ne; // Force Nepali
---

<section id="economic-overview" class="py-20 bg-zinc-900">
    <div class="container mx-auto px-4">
        <!-- Main Title -->
        <div class="max-w-4xl mx-auto text-center mb-16">
            <h2
                class="text-3xl md:text-5xl font-serif font-bold text-white mb-6"
            >
                {t.title}
            </h2>
            <p class="text-lg text-zinc-400 leading-relaxed">{t.description}</p>
        </div>

        <!-- 4.1.1 Industrial Classification -->
        <div id="industrial-classification" class="mb-24 scroll-mt-24">
            <div class="max-w-3xl mx-auto mb-10 text-center">
                <h3 class="text-2xl font-serif text-amber-500 mb-3">
                    {t.sections.industrialClassification.title}
                </h3>
                <p class="text-zinc-400">
                    {t.sections.industrialClassification.description}
                </p>
            </div>

            <div class="max-w-6xl mx-auto">
                <EconomicActivitiesChart
                    data={t.sections.industrialClassification.chartData}
                />
                <p class="text-center text-zinc-500 text-sm mt-4 italic">
                    {t.sections.industrialClassification.subtitle}
                </p>
            </div>
        </div>

        <!-- 4.1.3 Import Export -->
        <div
            class="grid md:grid-cols-2 gap-12 mb-24 max-w-6xl mx-auto items-center"
        >
            <div
                id="import-export"
                class="bg-zinc-800/30 p-8 rounded-2xl border border-zinc-700/50 scroll-mt-24"
            >
                <h3 class="text-2xl font-serif text-white mb-4">
                    {t.sections.importExport.title}
                </h3>
                <p class="text-zinc-400 leading-relaxed text-justify">
                    {t.sections.importExport.content}
                </p>
            </div>
            <div
                id="raw-materials"
                class="bg-zinc-800/30 p-8 rounded-2xl border border-zinc-700/50 scroll-mt-24"
            >
                <h3 class="text-2xl font-serif text-white mb-4">
                    {t.sections.rawMaterials.title}
                </h3>
                <p class="text-zinc-400 leading-relaxed text-justify">
                    {t.sections.rawMaterials.content}
                </p>
            </div>
        </div>

        <!-- 4.1.5 Foreign Employment -->
        <div id="foreign-employment" class="mb-24 scroll-mt-24">
            <div class="max-w-3xl mx-auto mb-10 text-center">
                <h3 class="text-2xl font-serif text-amber-500 mb-3">
                    {t.sections.foreignEmployment.title}
                </h3>
                <p class="text-zinc-400">
                    {t.sections.foreignEmployment.description}
                </p>
            </div>

            <div class="max-w-6xl mx-auto">
                <ForeignEmploymentChart
                    data={t.sections.foreignEmployment.chartData}
                />
                <p class="text-center text-zinc-500 text-sm mt-4 italic">
                    {t.sections.foreignEmployment.subtitle}
                </p>
            </div>
        </div>

        <!-- 4.1.6 Squatter -->
        <div
            id="landless"
            class="max-w-4xl mx-auto bg-zinc-800/30 p-8 rounded-2xl border border-zinc-700/50 scroll-mt-24"
        >
            <h3 class="text-2xl font-serif text-white mb-4">
                {t.sections.squatterDetails.title}
            </h3>
            <p class="text-zinc-400 leading-relaxed text-justify">
                {t.sections.squatterDetails.content}
            </p>
        </div>
    </div>
</section>
