---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import HousingOwnershipChart from "../../charts/chapter-4/HousingOwnershipChart.astro";
import HousingConstructionChart from "../../charts/chapter-4/HousingConstructionChart.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

const content = await loadChapterSection(4, "housing", lang);

if (!content) {
    throw new Error("Housing content not found");
}
---

<section id="housing" class="relative bg-[#050505] py-8 md:py-12 scroll-mt-24">
    <div class="container mx-auto px-8">
        <div class="w-full mx-auto space-y-8">
            <h2
                class="font-serif text-2xl md:text-3xl font-medium text-zinc-100"
            >
                {content.number}
                {content.title}
            </h2>

            <!-- Ownership -->
            <div class="space-y-4">
                <h3
                    class="font-serif text-xl md:text-2xl text-zinc-100 font-medium"
                >
                    {content.ownership.subtitle}
                    {content.ownership.title}
                </h3>
                <p class="font-serif text-base text-zinc-300 leading-relaxed">
                    {content.ownership.intro}
                </p>

                <h4
                    class="font-serif text-lg md:text-xl text-zinc-200 font-medium"
                >
                    {content.ownership.tableTitle}
                </h4>

                <div class="overflow-x-auto">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-zinc-700">
                                <th
                                    class="text-left py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{
                                        lang === "ne" ? "वडा नं." : "Ward No."
                                    }</th
                                >
                                <th
                                    class="text-right py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{lang === "ne" ? "निजी" : "Private"}</th
                                >
                                <th
                                    class="text-right py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{lang === "ne" ? "भाडामा" : "Rented"}</th
                                >
                                <th
                                    class="text-right py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{
                                        lang === "ne"
                                            ? "संस्थागत"
                                            : "Institutional"
                                    }</th
                                >
                                <th
                                    class="text-right py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{lang === "ne" ? "अन्य" : "Other"}</th
                                >
                                <th
                                    class="text-right py-3 px-4 font-serif text-sm md:text-base text-zinc-300"
                                    >{lang === "ne" ? "जम्मा" : "Total"}</th
                                >
                            </tr>
                        </thead>
                        <tbody>
                            {
                                content.ownership.tableData.map((row: any) => (
                                    <tr class="border-b border-zinc-800 hover:bg-zinc-900/30 transition-colors">
                                        <td class="py-2 px-4 font-serif text-sm md:text-base text-zinc-300">
                                            {row.ward}
                                        </td>
                                        <td class="text-right py-2 px-4 font-serif text-sm md:text-base text-zinc-300">
                                            {row.private.toLocaleString()}
                                        </td>
                                        <td class="text-right py-2 px-4 font-serif text-sm md:text-base text-zinc-300">
                                            {row.rented.toLocaleString()}
                                        </td>
                                        <td class="text-right py-2 px-4 font-serif text-sm md:text-base text-zinc-300">
                                            {row.institutional.toLocaleString()}
                                        </td>
                                        <td class="text-right py-2 px-4 font-serif text-sm md:text-base text-zinc-300">
                                            {row.other.toLocaleString()}
                                        </td>
                                        <td class="text-right py-2 px-4 font-serif text-sm md:text-base text-zinc-300 font-medium">
