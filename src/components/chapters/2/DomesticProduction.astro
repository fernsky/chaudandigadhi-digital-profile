---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type DomesticProductionContent = {
    title: string;
    sectionId: string;
    content: Array<{
        text: string;
    }>;
};

const content = await loadChapterSection<DomesticProductionContent>(
    2,
    "domestic-production",
    lang,
);

if (!content) {
    throw new Error("Domestic production section content not found");
}
---

<section id="domestic-production" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {lang === "ne" ? "реи.рео" : "2.8"}
                    {content.title}
                </h2>
            </div>
            <div class="space-y-4">
                {
                    content.content.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para.text}
                        </p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
