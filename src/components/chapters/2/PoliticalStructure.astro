---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

const formatNumber = (num: number, decimals = 0) => {
    const formatted = num.toLocaleString("en-US", {
        minimumFractionDigits: decimals,
        maximumFractionDigits: decimals,
    });
    if (lang !== "ne") return formatted;
    const nepaliDigits = ["०", "१", "२", "३", "४", "५", "६", "७", "८", "९"];
    return formatted.replace(/\d/g, (digit) => nepaliDigits[parseInt(digit)]);
};

const t = {
    mapNo: lang === "ne" ? "नक्सा नं." : "Map No.",
    wardNo: lang === "ne" ? "वडा नं." : "Ward No.",
    includedVDC:
        lang === "ne"
            ? "समावेश गाविस/तथा नगरपालिका"
            : "Included VDC/Municipality",
    areaSqKm: lang === "ne" ? "क्षेत्रफल (वर्ग कि.मि.)" : "Area (sq km)",
    total: lang === "ne" ? "जम्मा" : "Total",
    source: lang === "ne" ? "स्रोत" : "Source",
};

type PoliticalStructureContent = {
    title: string;
    sectionId: string;
    intro: string;
    tableTitle: string;
    tableData: Array<{
        wardNo: string;
        includedVDC: string;
        population: number;
        area: number;
    }>;
    total: {
        population: number;
        area: number;
    };
    source: string;
    maps: Array<{
        number: number;
        title: string;
        image: string;
    }>;
};

const content = await loadChapterSection<PoliticalStructureContent>(
    2,
    "political-structure",
    lang,
);

if (!content) {
    throw new Error("Political structure section content not found");
}
---

<section id="political-structure" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {lang === "ne" ? "२.३" : "2.3"}
                    {content.title}
                </h2>
            </div>

            <!-- Maps -->
            <div class="space-y-8 mb-8">
                {
                    content.maps.map((map) => (
                        <div class="flex flex-col items-center space-y-4">
                            <div class="w-full bg-[#0a0a0a] border border-[#f2e25d]/10 p-4">
                                <div class="aspect-video bg-[#050505] flex items-center justify-center border border-[#f2e25d]/5">
                                    <img
                                        src={map.image}
                                        alt={map.title}
                                        class="w-full h-full object-contain"
                                        loading="lazy"
                                    />
                                </div>
                            </div>
                            <p class="text-zinc-100 font-serif text-lg font-bold text-center">
                                {t.mapNo} {formatNumber(map.number)}:{" "}
                                {map.title}
                            </p>
                        </div>
                    ))
                }
            </div>

            <div class="mb-8">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Table Title -->
            <h3
                class="font-serif text-xl md:text-2xl text-white font-medium mb-4 text-center font-bold"
            >
                {content.tableTitle}
            </h3>

            <!-- Premium Table -->
            <div class="overflow-x-auto mb-4">
                <table
                    class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                >
                    <thead>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th
                                class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{t.wardNo}</th
                            >
                            <th
                                class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{t.includedVDC}</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >{t.wardNo}</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium"
                                >{t.areaSqKm}</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            content.tableData.map((row, index) => (
                                <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                    <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                        {row.wardNo}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                        {row.includedVDC}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {formatNumber(row.population)}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right">
                                        {formatNumber(row.area, 2)}
                                    </td>
                                </tr>
                            ))
                        }
                        <!-- Total Row -->
                        <tr
                            class="bg-[#f2e25d]/10 border-t-2 border-[#f2e25d]/30 font-medium"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/10"
                                colspan="2">{t.total}</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {formatNumber(content.total.population)}
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right"
                            >
                                {formatNumber(content.total.area, 2)}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Source -->
            <p class="text-zinc-400 font-serif text-sm italic">
                {t.source}: {content.source}
            </p>
        </div>
    </div>
</section>
