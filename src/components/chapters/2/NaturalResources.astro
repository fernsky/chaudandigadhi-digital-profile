---
import type { Language } from "../../../lib/i18n";
import { formatNumber } from "../../../lib/i18n/formatters";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type NaturalResourcesContent = {
    title: string;
    sectionId: string;
    content: Array<{
        text: string;
    }>;
};

const content = await loadChapterSection<NaturalResourcesContent>(
    2,
    "natural-resources",
    lang,
);

if (!content) {
    throw new Error("Natural resources section content not found");
}
---

<section id="natural-resources" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {formatNumber("2.5", lang)}
                    {content.title}
                </h2>
            </div>
            <div class="space-y-4">
                {
                    content.content.map((para: any) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para.text}
                        </p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
