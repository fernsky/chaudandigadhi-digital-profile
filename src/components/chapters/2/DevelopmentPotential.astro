---
import type { Language } from "../../../lib/i18n";
import { formatNumber } from "../../../lib/i18n/formatters";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type DevelopmentPotentialContent = {
    title: string;
    sectionId: string;
    intro: string;
    opportunities: Array<{
        text: string;
    }>;
    keyPoints: string[];
};

const content = await loadChapterSection<DevelopmentPotentialContent>(
    2,
    "development-potential",
    lang,
);

if (!content) {
    throw new Error("Development potential section content not found");
}
---

<section id="development-potential" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.title}
                </h2>
            </div>
            <div class="space-y-4">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.intro}
                </p>
                {
                    content.opportunities.map((opp: any) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {opp.text}
                        </p>
                    ))
                }
                <div class="mt-6 space-y-3">
                    {
                        content.keyPoints.map((point: any) => (
                            <div class="flex items-start gap-4">
                                <span class="text-[#f2e25d] font-serif text-lg md:text-xl shrink-0">
                                    â€¢
                                </span>
                                <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                    {point}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
