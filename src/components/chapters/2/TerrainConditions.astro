---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type TerrainConditionsContent = {
    title: string;
    sectionId: string;
    intro: string;
};

const content = await loadChapterSection<TerrainConditionsContent>(
    2,
    "terrain-conditions",
    lang,
);

if (!content) {
    throw new Error("Terrain conditions section content not found");
}
---

<section id="terrain-conditions" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Section Header -->
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    реи.рек {content.title}
                </h2>
            </div>

            <!-- Content -->
            <div class="space-y-4">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.intro}
                </p>
            </div>
        </div>
    </div>
</section>
