---
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import type { Language } from "../../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const data = await loadChapterSection("annexures", "ward-women-network", lang);

interface NetworkRow {
    sn: string;
    name: string;
    post: string;
    contact?: string;
}

interface WardData {
    title: string;
    headers: string[];
    rows: NetworkRow[];
    source: string;
}

interface SectionData {
    id: string;
    title: string;
    wards: WardData[];
    nextSection?: string;
}

const typedData = data as unknown as SectionData;
---

<div
    id="women-network-committee"
    class="scroll-mt-32 space-y-12 mb-16 pt-8 border-t border-white/5"
>
    <div>
        <h2 class="font-serif text-3xl md:text-4xl font-bold text-white mb-8">
            <span class="text-[#f2e25d]">{typedData.id}</span>: {
                typedData.title
            }
        </h2>
    </div>

    {
        typedData.wards && typedData.wards.length > 0 ? (
            typedData.wards.map((ward) => (
                <div class="mb-16">
                    <h3 class="text-xl md:text-2xl font-serif font-semibold text-white mb-6 text-center opacity-90">
                        {ward.title}
                    </h3>

                    <div class="overflow-x-auto rounded-lg border border-[#f2e25d]/10 bg-white/5">
                        <table class="w-full text-left border-collapse">
                            <thead class="bg-[#f2e25d]/10 text-white font-serif text-lg">
                                <tr>
                                    {ward.headers.map((header) => (
                                        <th class="px-6 py-4 border-b border-[#f2e25d]/20 font-bold tracking-wide text-[#f2e25d]">
                                            {header}
                                        </th>
                                    ))}
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[#f2e25d]/10 text-zinc-300 font-serif">
                                {ward.rows.map((row) => (
                                    <tr class="hover:bg-[#f2e25d]/5 transition-colors group">
                                        <td class="px-6 py-3 opacity-70 border-r border-[#f2e25d]/10">
                                            {row.sn}
                                        </td>
                                        <td class="px-6 py-3 font-medium text-white border-r border-[#f2e25d]/10">
                                            {row.name || "-"}
                                        </td>
                                        <td class="px-6 py-3 border-r border-[#f2e25d]/10">
                                            {row.post || "-"}
                                        </td>
                                        <td class="px-6 py-3">
                                            {row.contact || "-"}
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>

                    {ward.source && (
                        <div class="text-right text-zinc-400 font-serif italic text-sm mt-2">
                            {lang === "ne" ? "स्रोत: " : "Source: "}
                            {ward.source}
                        </div>
                    )}
                </div>
            ))
        ) : (
            <div class="p-8 bg-white/5 border border-dashed border-[#f2e25d]/20 rounded-2xl text-center">
                <p class="text-zinc-400 italic font-serif">
                    {lang === "ne"
                        ? "यस खण्डको विवरण चाँडै थपिनेछ।"
                        : "Details for this section will be added soon."}
                </p>
            </div>
        )
    }
</div>

<style>
    table th,
    table td {
        min-width: 150px;
    }
    table th:first-child,
    table td:first-child {
        min-width: 80px;
        width: 80px;
    }
</style>
