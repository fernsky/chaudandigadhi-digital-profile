---
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { formatNumber } from "../../../lib/i18n/formatters";
import type { Language } from "../../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

// Define Types
type HealthWorkerRow = { sn: string; name: string; designation: string; office: string; contact: string };

type TableData<T> = { title: string; source?: string; headers: string[]; rows: T[] };
type SectionData<T> = { id: string; title: string; table: TableData<T> };

const data = await loadChapterSection<SectionData<HealthWorkerRow>>(
    "annexures",
    "health-workers",
    lang,
);
---

{
    data && (
        <div
            id="health-workers"
            class="scroll-mt-32 space-y-8 mb-16 pt-8 border-t border-white/5"
        >
            <div>
                <h2 class="font-serif text-3xl md:text-4xl font-bold text-white mb-8">
                    <span class="text-[#f2e25d]">{formatNumber(data.id, lang)}</span>: {data.title}
                </h2>

                <!-- Health Workers Table -->
                <div class="mb-12">
                     <h3 class="font-serif text-lg md:text-xl text-white mb-4 text-center font-medium opacity-90">
                        {data.table.title}
                    </h3>
                    <div class="overflow-x-auto rounded-lg border border-[#f2e25d]/10 bg-white/5">
                        <table class="w-full text-left border-collapse">
                            <thead class="bg-[#f2e25d]/10 text-white font-serif text-lg">
                                <tr>
                                    <th class="px-6 py-4 border-b border-[#f2e25d]/20 w-16 text-center font-bold text-[#f2e25d]">
                                        {data.table.headers[0]}
                                    </th>
                                    <th class="px-6 py-4 border-b border-[#f2e25d]/20 font-bold text-[#f2e25d]">
                                        {data.table.headers[1]}
                                    </th>
                                    <th class="px-6 py-4 border-b border-[#f2e25d]/20 font-bold text-[#f2e25d]">
                                        {data.table.headers[2]}
                                    </th>
                                    <th class="px-6 py-4 border-b border-[#f2e25d]/20 font-bold text-[#f2e25d]">
                                        {data.table.headers[3]}
                                    </th>
                                    <th class="px-6 py-4 border-b border-[#f2e25d]/20 font-bold text-[#f2e25d]">
                                        {data.table.headers[4]}
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[#f2e25d]/10 text-zinc-300 font-serif">
                                {data.table.rows.map((row: any) => (
                                    <tr class="hover:bg-[#f2e25d]/5 transition-colors">
                                        <td class="px-6 py-3 text-center opacity-70">
                                            {formatNumber(row.sn, lang)}
                                        </td>
                                        <td class="px-6 py-3 font-medium text-white">
                                            {row.name}
                                        </td>
                                        <td class="px-6 py-3">
                                            {row.designation}
                                        </td>
                                        <td class="px-6 py-3">
                                            {row.office}
                                        </td>
                                        <td class="px-6 py-3">{formatNumber(row.contact, lang)}</td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                    {data.table.source && (
                        <div class="text-right text-zinc-400 font-serif italic text-sm mt-2">
                            {lang === 'ne' ? 'स्रोतः' : 'Source:'} {data.table.source}
                        </div>
                    )}
                </div>
            </div>
        </div>
    )
}
