---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import OccupationBarChart from "../../charts/chapter-3/OccupationBarChart.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type OccupationContent = {
    title: string;
    sectionId: string;
    number: string;
    tableTitle: string;
    tableData: Array<{
        occupation: string;
        "10-14": number;
        "15-19": number;
        "20-24": number;
        "25-29": number;
        "30-34": number;
        "35-39": number;
        "40-44": number;
        "45-49": number;
        "50-54": number;
        "55-59": number;
        "60-64": number;
        "65-70": number;
        total: number;
        percentage: number;
    }>;
    total: any;
    source: string;
    analysis: string;
};

const content = await loadChapterSection<OccupationContent>(
    3,
    "occupation",
    lang,
);

if (!content) {
    throw new Error("Occupation content not found");
}
---

<section id="occupation" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="max-w-full mx-auto">
            <!-- Section Header -->
            <div class="mb-6 w-full">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.number}
                    {content.title}
                </h2>
            </div>

            <!-- Table Title -->
            <h4
                class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-4 w-full"
            >
                {content.tableTitle}
            </h4>

            <!-- Occupation Bar Chart -->
            <div class="mb-12">
                <OccupationBarChart lang={lang} />
            </div>

            <!-- Premium Wide Table -->
            <div class="overflow-x-auto mb-6">
                <table
                    class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10 text-xs md:text-sm"
                >
                    <thead>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th
                                class="px-2 md:px-3 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10 sticky left-0 bg-[#0a0a0a] z-10"
                                >परिवारको मुख्य पेशा</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >१०-१४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >१५-१९</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >२०-२४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >२५-२९</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >३०-३४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >३५-३९</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >४०-४४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >४५-४९</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >५०-५४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >५५-५९</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >६०-६४</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >६५-७०</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >जम्मा</th
                            >
                            <th
                                class="px-2 md:px-3 py-3 text-center font-serif text-zinc-100 font-medium"
                                >प्रतिशत</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            content.tableData.map((row) => (
                                <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5 sticky left-0 bg-[#0a0a0a]">
                                        {row.occupation}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["10-14"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["15-19"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["20-24"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["25-29"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["30-34"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["35-39"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["40-44"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["45-49"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["50-54"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["55-59"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["60-64"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row["65-70"].toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5 font-medium">
                                        {row.total.toLocaleString()}
                                    </td>
                                    <td class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right">
                                        {row.percentage.toFixed(2)}
                                    </td>
                                </tr>
                            ))
                        }
                        <!-- Total Row -->
                        <tr
                            class="bg-[#f2e25d]/10 border-t-2 border-[#f2e25d]/30 font-medium"
                        >
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/10 sticky left-0 bg-[#0a0a0a]"
                                >जम्मा</td
                            >
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["10-14"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["15-19"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["20-24"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["25-29"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["30-34"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["35-39"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["40-44"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["45-49"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["50-54"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["55-59"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["60-64"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total["65-70"].toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total.total.toLocaleString()}
                            </td>
                            <td
                                class="px-2 md:px-3 py-3 font-serif text-zinc-100 text-right"
                            >
                                {content.total.percentage}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Source -->
            <p
                class="text-zinc-400 font-serif text-sm italic mb-6 w-full"
            >
                स्रोत M {content.source}
            </p>

            <!-- Analysis -->
            <div class="mt-6 w-full">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.analysis}
                </p>
            </div>
        </div>
    </div>
</section>
