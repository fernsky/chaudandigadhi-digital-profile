---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import CasteBarChart from "../../charts/chapter-3/CasteBarChart.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type CasteEthnicityContent = {
    title: string;
    sectionId: string;
    number: string;
    intro: string;
    tableTitle: string;
    tableData: Array<{
        caste: string;
        male: number;
        female: number;
        total: number;
        percentage: number;
    }>;
    total: {
        male: number;
        female: number;
        total: number;
        percentage: number;
    };
    source: string;
    note: string;
};

const content = await loadChapterSection<CasteEthnicityContent>(
    3,
    "caste-ethnicity",
    lang,
);

if (!content) {
    throw new Error("Caste ethnicity content not found");
}
---

<section id="ethnicity" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.number}
                    {content.title}
                </h2>
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Table Title -->
            <h4
                class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-4"
            >
                {content.tableTitle}
            </h4>

            <!-- Caste Bar Chart -->
            <div class="mb-12">
                <CasteBarChart lang={lang} />
            </div>

            <!-- Premium Table -->
            <div class="overflow-x-auto mb-6">
                <table
                    class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                >
                    <thead>
                        <tr class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20">
                            <th
                                class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >जातजाति</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >पुरूष</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >महिला</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                >जम्मा</th
                            >
                            <th
                                class="px-4 py-3 text-right font-serif text-zinc-100 font-medium"
                                >प्रतिशत</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        {
                            content.tableData.map((row) => (
                                <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                    <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                        {row.caste}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row.male.toLocaleString()}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row.female.toLocaleString()}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                        {row.total.toLocaleString()}
                                    </td>
                                    <td class="px-4 py-3 font-serif text-zinc-100 text-right">
                                        {row.percentage.toFixed(2)}
                                    </td>
                                </tr>
                            ))
                        }
                        <!-- Total Row -->
                        <tr
                            class="bg-[#f2e25d]/10 border-t-2 border-[#f2e25d]/30 font-medium"
                        >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/10"
                                >जम्मा</td
                            >
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total.male.toLocaleString()}
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total.female.toLocaleString()}
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                            >
                                {content.total.total.toLocaleString()}
                            </td>
                            <td
                                class="px-4 py-3 font-serif text-zinc-100 text-right"
                            >
                                {content.total.percentage}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Source -->
            <p class="text-zinc-400 font-serif text-sm italic mb-4">
                स्रोत M {content.source}
            </p>

            <!-- Note -->
            <p
                class="text-zinc-100 font-serif text-base font-light leading-relaxed"
            >
                नोटः {content.note}
            </p>
        </div>
    </div>
</section>
