---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import MigrationCharts from "../../charts/chapter-3/MigrationCharts.astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type MigrationContent = {
    title: string;
    sectionId: string;
    number: string;
    subsections: {
        birthplace: {
            title: string;
            tableTitle: string;
            analysis: string;
        };
        previousResidence: {
            title: string;
            tableTitle: string;
            tableData: Array<{
                type: string;
                male: number;
                female: number;
                total: number;
                percentage: number;
            }>;
            total: {
                male: number;
                female: number;
                total: number;
                percentage: number;
            };
            source: string;
            analysis: string;
        };
    };
};

const content = await loadChapterSection<MigrationContent>(
    3,
    "migration",
    lang,
);

if (!content) {
    throw new Error("Migration content not found");
}
---

<section id="migration" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.number}
                    {content.title}
                </h2>
            </div>

            <!-- Birthplace Subsection -->
            <div class="mb-12">
                <h3
                    class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-4"
                >
                    {content.subsections.birthplace.title}
                </h3>

                <h4
                    class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-4"
                >
                    {content.subsections.birthplace.tableTitle}
                </h4>

                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.subsections.birthplace.analysis}
                </p>
            </div>

            <!-- Previous Residence Subsection -->
            <div>
                <h3
                    class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-4"
                >
                    {content.subsections.previousResidence.title}
                </h3>

                <h4
                    class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-4"
                >
                    {content.subsections.previousResidence.tableTitle}
                </h4>

                <!-- Migration Chart -->
                <div class="mb-12">
                    <MigrationCharts lang={lang} />
                </div>

                <!-- Premium Table -->
                <div class="overflow-x-auto mb-6">
                    <table
                        class="w-full border-collapse bg-[#0a0a0a] border border-[#f2e25d]/10"
                    >
                        <thead>
                            <tr
                                class="bg-[#f2e25d]/5 border-b border-[#f2e25d]/20"
                            >
                                <th
                                    class="px-4 py-3 text-left font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >बसाइँसराईको किसिम</th
                                >
                                <th
                                    class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >पुरुष</th
                                >
                                <th
                                    class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >महिला</th
                                >
                                <th
                                    class="px-4 py-3 text-right font-serif text-zinc-100 font-medium border-r border-[#f2e25d]/10"
                                    >कुल</th
                                >
                                <th
                                    class="px-4 py-3 text-right font-serif text-zinc-100 font-medium"
                                    >प्रतिशत</th
                                >
                            </tr>
                        </thead>
                        <tbody>
                            {
                                content.subsections.previousResidence.tableData.map(
                                    (row) => (
                                        <tr class="border-b border-[#f2e25d]/5 hover:bg-[#f2e25d]/5 transition-colors duration-200">
                                            <td class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/5">
                                                {row.type}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                                {row.male.toLocaleString()}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                                {row.female.toLocaleString()}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/5">
                                                {row.total.toLocaleString()}
                                            </td>
                                            <td class="px-4 py-3 font-serif text-zinc-100 text-right">
                                                {row.percentage.toFixed(2)}
                                            </td>
                                        </tr>
                                    ),
                                )
                            }
                            <!-- Total Row -->
                            <tr
                                class="bg-[#f2e25d]/10 border-t-2 border-[#f2e25d]/30 font-medium"
                            >
                                <td
                                    class="px-4 py-3 font-serif text-zinc-100 border-r border-[#f2e25d]/10"
                                    >जम्मा</td
                                >
                                <td
                                    class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                                >
                                    {
                                        content.subsections.previousResidence.total.male.toLocaleString()
                                    }
                                </td>
                                <td
                                    class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                                >
                                    {
                                        content.subsections.previousResidence.total.female.toLocaleString()
                                    }
                                </td>
                                <td
                                    class="px-4 py-3 font-serif text-zinc-100 text-right border-r border-[#f2e25d]/10"
                                >
                                    {
                                        content.subsections.previousResidence.total.total.toLocaleString()
                                    }
                                </td>
                                <td
                                    class="px-4 py-3 font-serif text-zinc-100 text-right"
                                >
                                    {
                                        content.subsections.previousResidence
                                            .total.percentage
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Source -->
                <p class="text-zinc-400 font-serif text-sm italic mb-6">
                    स्रोतM {content.subsections.previousResidence.source}
                </p>

                <!-- Analysis -->
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.subsections.previousResidence.analysis}
                </p>
            </div>
        </div>
    </div>
</section>
