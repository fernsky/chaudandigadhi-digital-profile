---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type PopulationDistributionContent = {
    title: string;
    sectionId: string;
    number: string;
    intro: string[];
    tableTitle: string;
    stats: Array<{
        label: string;
        value: string;
    }>;
    source: string;
    analysis: string;
};

const content = await loadChapterSection<PopulationDistributionContent>(
    3,
    "population-distribution",
    lang,
);

if (!content) {
    throw new Error("Population distribution content not found");
}
---

<section
    id="population-distribution"
    class="relative bg-[#050505] py-8 md:py-12"
>
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-6">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.number}
                    {content.title}
                </h2>
            </div>

            <!-- Intro Paragraphs -->
            <div class="space-y-4 mb-6">
                {
                    content.intro.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para}
                        </p>
                    ))
                }
            </div>

            <!-- Table Title -->
            <h4
                class="font-serif text-xl md:text-2xl text-zinc-100 font-medium mb-6"
            >
                {content.tableTitle}
            </h4>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                {
                    content.stats.map((stat) => (
                        <div class="bg-[#0a0a0a] border border-[#f2e25d]/10 p-6 hover:border-[#f2e25d]/30 transition-all duration-300">
                            <p class="text-zinc-400 font-serif text-sm mb-2">
                                {stat.label}
                            </p>
                            <p class="text-[#f2e25d] font-serif text-2xl md:text-3xl font-medium">
                                {stat.value}
                            </p>
                        </div>
                    ))
                }
            </div>

            <!-- Source -->
            <p class="text-zinc-400 font-serif text-sm italic mb-6">
                स्रोतM {content.source}
            </p>

            <!-- Analysis -->
            <div class="mt-6">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.analysis}
                </p>
            </div>
        </div>
    </div>
</section>
