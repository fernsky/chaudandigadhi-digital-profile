---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type HeroContent = {
    title: string;
    subtitle: string;
    tagline: string;
    description: string;
    stats: Array<{
        value: string;
        label: string;
    }>;
};

const content = await loadChapterSection<HeroContent>(1, "hero", lang);

if (!content) {
    throw new Error("Chapter hero content not found");
}
---

<section
    class="relative min-h-[90vh] bg-[url('/images/sakuna-pokhari.jpeg')] bg-cover bg-center bg-fixed flex items-center"
>
    <!-- Dark Overlay with Gradient -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-black/90 via-[#0a0a0a]/85 to-black/90"
    >
    </div>

    <!-- Animated Grid Pattern -->
    <div
        class="absolute inset-0 opacity-5 bg-[linear-gradient(to_right,#ffffff12_1px,transparent_1px),linear-gradient(to_bottom,#ffffff12_1px,transparent_1px)] bg-[size:4rem_4rem]"
    >
    </div>

    <div class="relative z-10 w-full py-24">
        <div class="container mx-auto px-8">
            <div class="max-w-6xl mx-auto">
                <!-- Main Title -->
                <h1
                    class="font-serif text-[clamp(4rem,10vw,8rem)] md:text-[9rem] leading-[0.85] font-medium text-white tracking-tighter mb-12 animate-in fade-in slide-in-from-bottom-12 duration-1000"
                >
                    {content.subtitle}
                </h1>

                <!-- Tagline -->
                <p
                    class="font-serif text-2xl md:text-3xl text-zinc-300 mb-8 max-w-3xl leading-snug animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-200"
                >
                    {content.tagline}
                </p>

                <!-- Description -->
                <p
                    class="font-serif text-lg md:text-xl text-zinc-400 max-w-2xl leading-relaxed animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-400"
                >
                    {content.description}
                </p>
            </div>
        </div>
    </div>
</section>
