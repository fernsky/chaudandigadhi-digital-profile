---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type HeroContent = {
    title: string;
    subtitle: string;
    tagline: string;
    description: string;
    stats: Array<{
        value: string;
        label: string;
    }>;
};

const content = await loadChapterSection<HeroContent>(1, "hero", lang);

if (!content) {
    throw new Error("Chapter hero content not found");
}
---

<section class="relative min-h-[60vh] bg-black flex items-center">
    <div class="container mx-auto px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Main Title -->
            <h1
                class="font-serif text-[clamp(3.5rem,8vw,6rem)] leading-[1.1] font-bold text-white tracking-tight mb-8"
            >
                {content.subtitle}
            </h1>

            <!-- Tagline -->
            <p
                class="font-serif text-2xl md:text-3xl text-white mb-6 leading-snug"
            >
                {content.tagline}
            </p>

            <!-- Description -->
            <p
                class="font-serif text-lg md:text-xl text-zinc-100 leading-relaxed"
            >
                {content.description}
            </p>
        </div>
    </div>
</section>
