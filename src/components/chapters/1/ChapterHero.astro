---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { ChevronDown } from "lucide-astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type HeroContent = {
    title: string;
    subtitle: string;
    tagline: string;
    description: string;
    stats: Array<{
        value: string;
        label: string;
    }>;
};

const content = await loadChapterSection<HeroContent>(1, "hero", lang);

if (!content) {
    throw new Error("Chapter hero content not found");
}
---

<section
    class="relative min-h-screen bg-[url('/images/sakuna-pokhari.jpeg')] bg-cover bg-center bg-fixed flex items-center"
>
    <!-- Dark Overlay with Gradient -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-black/90 via-[#0a0a0a]/85 to-black/90"
    >
    </div>

    <!-- Animated Grid Pattern -->
    <div
        class="absolute inset-0 opacity-5 bg-[linear-gradient(to_right,#ffffff12_1px,transparent_1px),linear-gradient(to_bottom,#ffffff12_1px,transparent_1px)] bg-[size:4rem_4rem]"
    >
    </div>

    <div class="relative z-10 w-full py-24">
        <div class="container mx-auto px-8">
            <div class="max-w-6xl mx-auto">
                <!-- Chapter Number Badge -->
                <div
                    class="inline-block px-8 py-3 bg-white/10 backdrop-blur-md border border-white/20 mb-8 animate-in fade-in slide-in-from-bottom-8 duration-1000"
                >
                    <span
                        class="text-zinc-200 font-serif text-lg tracking-[0.3em] uppercase"
                    >
                        {content.title}
                    </span>
                </div>

                <!-- Main Title -->
                <h1
                    class="font-serif text-[clamp(4rem,10vw,8rem)] md:text-[8rem] leading-[0.85] font-medium text-white tracking-tighter mb-8 animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-150"
                >
                    {content.subtitle}
                </h1>

                <!-- Tagline -->
                <p
                    class="font-serif text-2xl md:text-3xl text-zinc-300 mb-6 max-w-3xl leading-snug animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-300"
                >
                    {content.tagline}
                </p>

                <!-- Description -->
                <p
                    class="font-serif text-lg md:text-xl text-zinc-400 mb-12 max-w-3xl leading-relaxed animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-450"
                >
                    {content.description}
                </p>

                <!-- Stats Grid -->
                <div
                    class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-600"
                >
                    {
                        content.stats.map((stat) => (
                            <div class="bg-white/5 backdrop-blur-md border border-white/10 p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-500 group">
                                <div class="text-[clamp(2.5rem,5vw,4rem)] font-serif font-medium text-white leading-none mb-2 group-hover:scale-110 transition-transform">
                                    {stat.value}
                                </div>
                                <div class="text-zinc-500 font-serif text-sm">
                                    {stat.label}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div
        class="absolute bottom-12 left-1/2 -translate-x-1/2 text-white/50 animate-bounce z-10"
    >
        <ChevronDown size={32} />
    </div>
</section>
