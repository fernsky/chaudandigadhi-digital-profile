---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type BackgroundContent = {
    title: string;
    sectionId: string;
    paragraphs: Array<{
        id: string;
        text: string;
        highlight: string[];
    }>;
    keyPoints: string[];
};

const content = await loadChapterSection<BackgroundContent>(
    1,
    "background",
    lang,
);

if (!content) {
    throw new Error("Background section content not found");
}
---

<section id="background" class="relative bg-[#050505] py-16 md:py-24">
    <div class="container mx-auto px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Section Header -->
            <div class="mb-8">
                <h2
                    class="font-serif text-3xl md:text-4xl font-bold text-obsidian-accent mb-6"
                >
                    рез.рез {content.title}
                </h2>
            </div>

            <!-- Content Paragraphs -->
            <div class="space-y-6">
                {
                    content.paragraphs.map((para) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl leading-relaxed">
                            {para.text}
                        </p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
