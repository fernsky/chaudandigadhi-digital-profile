---
import type { Language } from "../../../lib/i18n";
import { formatNumber } from "../../../lib/i18n/formatters";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type BackgroundContent = {
    title: string;
    sectionId: string;
    paragraphs: Array<{
        id: string;
        text: string;
        highlight: string[];
    }>;
    keyPoints: string[];
};

const content = await loadChapterSection<BackgroundContent>(
    1,
    "background",
    lang,
);

if (!content) {
    throw new Error("Background section content not found");
}
---

<section id="background" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {formatNumber("1.1", lang)}
                    {content.title}
                </h2>
            </div>

            <!-- Content Paragraphs -->
            <div class="space-y-4">
                {
                    content.paragraphs.map((para: any) => (
                        <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                            {para.text}
                        </p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
