---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type BackgroundContent = {
    title: string;
    sectionId: string;
    paragraphs: Array<{
        id: string;
        text: string;
        highlight: string[];
    }>;
    keyPoints: string[];
};

const content = await loadChapterSection<BackgroundContent>(
    1,
    "background",
    lang,
);

if (!content) {
    throw new Error("Background section content not found");
}
---

<section
    id="background"
    class="relative min-h-screen bg-[#050505] py-24 md:py-32"
>
    <!-- Decorative Background Elements (Removed per user request) -->
    <div class="absolute inset-0 pointer-events-none"></div>

    <div class="container mx-auto px-8 relative z-10">
        <!-- Section Header -->
        <div class="max-w-5xl mx-auto mb-16 reveal-item">
            <div
                class="inline-block px-6 py-2 bg-white/5 border border-white/10 mb-6"
            >
                <span class="text-zinc-500 font-serif text-sm tracking-wider"
                    >{content.sectionId}</span
                >
            </div>
            <h2
                class="font-serif text-[clamp(3rem,6vw,5rem)] md:text-[5.5rem] leading-[0.9] font-medium text-white tracking-tight mb-8"
            >
                {content.title}
            </h2>
            <div class="h-1 w-32 bg-gradient-to-r from-white/60 to-transparent">
            </div>
        </div>

        <!-- Content Paragraphs -->
        <div class="max-w-5xl mx-auto space-y-12">
            {
                content.paragraphs.map((para, index) => (
                    <div
                        class="reveal-item"
                        style={`--delay: ${index * 200}ms`}
                    >
                        <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 p-8 md:p-12">
                            <p class="text-zinc-400 font-serif text-lg md:text-xl leading-relaxed mb-6">
                                {para.text}
                            </p>

                            {/* Highlighted Key Terms */}
                            {para.highlight && para.highlight.length > 0 && (
                                <div class="flex flex-wrap gap-3 mt-8 pt-6 border-t border-white/10">
                                    {para.highlight.map((term) => (
                                        <span class="px-4 py-2 bg-white/5 border border-white/10 text-zinc-500 text-sm font-serif">
                                            {term}
                                        </span>
                                    ))}
                                </div>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Key Points Grid -->
        <div class="max-w-5xl mx-auto mt-20 reveal-item" style="--delay: 400ms">
            <h3
                class="font-serif text-2xl md:text-3xl text-white mb-8 tracking-tight"
            >
                मुख्य बुँदाहरू
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {
                    content.keyPoints.map((point, index) => (
                        <div class="group flex items-start gap-4 bg-white/[0.02] border border-white/5 p-6 transition-all duration-500 hover:bg-white/[0.04] hover:border-white/10">
                            <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-white/5 border border-white/10 text-white font-serif text-sm group-hover:bg-white/10 transition-colors">
                                {index + 1}
                            </div>
                            <p class="text-zinc-400 font-serif text-base md:text-lg flex-1 leading-relaxed">
                                {point}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .reveal-item {
        opacity: 0;
        transform: translateY(40px);
        transition:
            opacity 1s cubic-bezier(0.2, 0.8, 0.2, 1),
            transform 1s cubic-bezier(0.2, 0.8, 0.2, 1);
        transition-delay: var(--delay, 0ms);
    }

    .reveal-item.active {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -100px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("active");
            }
        });
    }, observerOptions);

    document.querySelectorAll(".reveal-item").forEach((item) => {
        observer.observe(item);
    });
</script>
