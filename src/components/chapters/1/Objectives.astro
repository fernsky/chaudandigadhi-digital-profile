---
import type { Language } from "../../../lib/i18n";
import { formatNumber } from "../../../lib/i18n/formatters";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type ObjectivesContent = {
    title: string;
    sectionId: string;
    intro: string;
    objectives: Array<{
        marker: string;
        title: string;
        description: string;
        icon: string;
    }>;
};

const content = await loadChapterSection<ObjectivesContent>(
    1,
    "objectives",
    lang,
);

const nepaliLetters = [
    "क)",
    "ख)",
    "ग)",
    "घ)",
    "ङ)",
    "च)",
    "छ)",
    "ज)",
    "झ)",
    "ञ)",
];

if (!content) {
    throw new Error("Objectives section content not found");
}
---

<section id="objectives" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.title}
                </h2>

                <!-- Introduction -->
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed mb-4"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Objectives List (Lettered as per image) -->
            <div class="space-y-4">
                {
                    content.objectives.map((objective: any, index: number) => (
                        <div class="flex items-start gap-4">
                            <span class="text-zinc-100 font-serif text-lg md:text-xl shrink-0 font-light">
                                {lang === "ne"
                                    ? nepaliLetters[index]
                                    : `${String.fromCharCode(97 + index)})`}
                            </span>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {objective.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
