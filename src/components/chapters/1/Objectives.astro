---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type ObjectivesContent = {
    title: string;
    sectionId: string;
    intro: string;
    objectives: Array<{
        marker: string;
        title: string;
        description: string;
        icon: string;
    }>;
};

const content = await loadChapterSection<ObjectivesContent>(
    1,
    "objectives",
    lang,
);

const nepaliLetters = [
    "क)",
    "ख)",
    "ग)",
    "घ)",
    "ङ)",
    "च)",
    "छ)",
    "ज)",
    "झ)",
    "ञ)",
];

if (!content) {
    throw new Error("Objectives section content not found");
}
---

<section id="objectives" class="relative bg-[#050505] py-16 md:py-24">
    <div class="container mx-auto px-8 max-w-4xl">
        <!-- Section Header -->
        <div class="mb-8">
            <h2
                class="font-serif text-3xl md:text-4xl font-bold text-blue-300 mb-6"
            >
                १.२ {content.title}
            </h2>

            <!-- Introduction -->
            <p
                class="text-white font-serif text-lg md:text-xl leading-relaxed mb-6 text-justify"
            >
                {content.intro}
            </p>
        </div>

        <!-- Objectives List (Lettered as per image) -->
        <div class="space-y-4">
            {
                content.objectives.map((objective, index) => (
                    <div class="flex items-start gap-4">
                        <span class="text-white font-serif text-lg md:text-xl shrink-0 font-medium">
                            {lang === "ne"
                                ? nepaliLetters[index]
                                : `${String.fromCharCode(97 + index)})`}
                        </span>
                        <p class="text-white font-serif text-lg md:text-xl leading-relaxed text-justify">
                            {objective.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
