---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type LegalFrameworkContent = {
    title: string;
    sectionId: string;
    intro: string;
    frameworks: Array<{
        marker: string;
        title: string;
        content: string;
        keyLaws?: string[];
        keyPolicies?: string[];
        keyNeeds?: string[];
    }>;
    footer: string;
    internationalCommitments: string[];
};

const content = await loadChapterSection<LegalFrameworkContent>(
    1,
    "legal-framework",
    lang,
);

const nepaliLettersParens = ["(क)", "(ख)", "(ग)", "(घ)", "(ङ)"];

if (!content) {
    throw new Error("Legal Framework section content not found");
}
---

<section id="legal-framework" class="relative bg-[#050505] py-16 md:py-24">
    <div class="container mx-auto px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Section Header -->
            <div class="mb-8">
                <h2
                    class="font-serif text-3xl md:text-4xl font-bold text-blue-300 mb-6"
                >
                    १.३ {content.title}
                </h2>

                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl leading-relaxed mb-8"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Framework Sections -->
            <div class="space-y-12">
                {
                    content.frameworks.map((framework, index) => (
                        <div class="space-y-4">
                            <h3 class="font-serif text-xl md:text-2xl text-zinc-100 font-bold">
                                {lang === "ne"
                                    ? nepaliLettersParens[index]
                                    : `(${String.fromCharCode(97 + index)})`}{" "}
                                {framework.title}
                            </h3>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl leading-relaxed">
                                {framework.content}
                            </p>
                        </div>
                    ))
                }
            </div>

            <!-- Footer -->
            <div class="mt-12">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl leading-relaxed"
                >
                    {content.footer}
                </p>
            </div>
        </div>
    </div>
</section>
