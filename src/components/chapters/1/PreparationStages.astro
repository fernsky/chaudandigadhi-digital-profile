---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type PreparationStagesContent = {
    title: string;
    sectionId: string;
    intro: string;
    methods: Array<{
        id: number;
        text: string;
    }>;
    description: string;
    dataTypes: string[];
    subsections: Array<{
        id: string;
        title: string;
        slug: string;
    }>;
};

const content = await loadChapterSection<PreparationStagesContent>(
    1,
    "preparation-stages",
    lang,
);

if (!content) {
    throw new Error("Preparation Stages content not found");
}
---

<section id="preparation-stages" class="relative bg-[#050505] py-16 md:py-24">
    <div class="container mx-auto px-8 max-w-4xl">
        <!-- Section Header -->
        <div class="mb-8">
            <h2
                class="font-serif text-3xl md:text-4xl font-bold text-blue-300 mb-6"
            >
                १.४ {content.title}
            </h2>

            <p
                class="text-white font-serif text-lg md:text-xl leading-relaxed mb-6 text-justify"
            >
                {content.intro}
            </p>
        </div>

        <!-- Methods List (With checkmarks as per user text) -->
        <div class="space-y-4 mb-8">
            {
                content.methods.map((method) => (
                    <div class="flex items-start gap-4">
                        <span class="text-white font-serif text-lg md:text-xl shrink-0">
                            ✓
                        </span>
                        <p class="text-white font-serif text-lg md:text-xl leading-relaxed text-justify">
                            {method.text}
                        </p>
                    </div>
                ))
            }
        </div>

        <!-- Description -->
        <div class="mb-8">
            <p
                class="text-white font-serif text-lg md:text-xl leading-relaxed text-justify"
            >
                {content.description}
            </p>
        </div>
    </div>
</section>
