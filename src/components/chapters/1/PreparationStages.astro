---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { ArrowRight } from "lucide-astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type PreparationStagesContent = {
    title: string;
    sectionId: string;
    intro: string;
    methods: Array<{
        id: number;
        text: string;
    }>;
    description: string;
    dataTypes: string[];
    subsections: Array<{
        id: string;
        title: string;
        slug: string;
    }>;
};

const content = await loadChapterSection<PreparationStagesContent>(
    1,
    "preparation-stages",
    lang,
);

if (!content) {
    throw new Error("Preparation Stages content not found");
}
---

<section
    id="preparation-stages"
    class="relative min-h-screen bg-slate-950 py-24 md:py-32"
>
    <!-- Grid Pattern Background (Removed per user request) -->
    <div class="absolute inset-0 pointer-events-none"></div>

    <div class="container mx-auto px-8 relative z-10">
        <!-- Section Header -->
        <div class="max-w-5xl mx-auto mb-16 reveal-item">
            <div
                class="inline-block px-6 py-2 bg-white/5 border border-white/10 mb-6"
            >
                <span class="text-slate-400 font-serif text-sm tracking-wider"
                    >{content.sectionId}</span
                >
            </div>
            <h2
                class="font-serif text-[clamp(2.5rem,5vw,4.5rem)] md:text-[4.5rem] leading-[0.95] font-medium text-white tracking-tight mb-10"
            >
                {content.title}
            </h2>

            <p
                class="text-slate-300 font-serif text-lg md:text-xl leading-relaxed mb-8"
            >
                {content.intro}
            </p>
        </div>

        <!-- Methods Grid -->
        <div
            class="max-w-5xl mx-auto mb-16 grid grid-cols-1 md:grid-cols-2 gap-6"
        >
            {
                content.methods.map((method, index) => (
                    <div
                        class="reveal-item bg-gradient-to-br from-white/[0.03] to-white/[0.01] border border-white/10 p-8 group hover:border-white/20 hover:bg-white/[0.05] transition-all duration-500"
                        style={`--delay: ${(index + 1) * 100}ms`}
                    >
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-white/10 border border-white/20 text-white font-serif text-lg group-hover:bg-white/15 group-hover:scale-110 transition-all">
                                {method.id}
                            </div>
                            <p class="text-slate-300 font-serif text-base md:text-lg leading-relaxed flex-1">
                                {method.text}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Description Block -->
        <div class="max-w-5xl mx-auto mb-16 reveal-item" style="--delay: 500ms">
            <div class="bg-white/[0.02] border border-white/5 p-8 md:p-12">
                <p
                    class="text-slate-300 font-serif text-base md:text-lg leading-relaxed"
                >
                    {content.description}
                </p>
            </div>
        </div>

        <!-- Data Types -->
        <div class="max-w-5xl mx-auto mb-20 reveal-item" style="--delay: 600ms">
            <h3
                class="font-serif text-2xl md:text-3xl text-white mb-6 tracking-tight"
            >
                तथ्याङ्क संकलन पद्धती
            </h3>
            <div class="flex flex-wrap gap-4">
                {
                    content.dataTypes.map((type) => (
                        <div class="px-6 py-3 bg-gradient-to-r from-blue-500/10 to-transparent border border-blue-500/20 text-slate-200 font-serif text-lg">
                            {type}
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Subsections Navigation -->
        <div class="max-w-5xl mx-auto reveal-item" style="--delay: 700ms">
            <div class="mb-8">
                <h3
                    class="font-serif text-2xl md:text-3xl text-white mb-2 tracking-tight"
                >
                    विस्तृत चरणहरू
                </h3>
                <p class="text-slate-400 font-serif text-lg">
                    {content.subsections.length} चरणहरूमा सम्पन्न तयारी प्रक्रिया
                </p>
            </div>

            <div class="grid grid-cols-1 gap-4">
                {
                    content.subsections.map((subsection, index) => (
                        <a
                            href={`#${subsection.slug}`}
                            class="group flex items-center justify-between bg-white/[0.02] border border-white/10 p-6 md:p-8 hover:bg-white/[0.04] hover:border-white/20 hover:translate-x-2 transition-all duration-500"
                        >
                            <div class="flex items-center gap-6">
                                <div class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-white/10 border border-white/20 font-serif text-white text-xl group-hover:bg-white/15 group-hover:scale-110 transition-all">
                                    {subsection.id}
                                </div>
                                <div>
                                    <h4 class="font-serif text-lg md:text-xl text-white mb-1 group-hover:text-slate-100 transition-colors">
                                        {subsection.title}
                                    </h4>
                                    <p class="text-slate-500 font-serif text-sm">
                                        चरण {index + 1}
                                    </p>
                                </div>
                            </div>
                            <ArrowRight
                                size={24}
                                class="text-slate-500 group-hover:text-white group-hover:translate-x-2 transition-all"
                            />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .reveal-item {
        opacity: 0;
        transform: translateY(40px);
        transition:
            opacity 1s cubic-bezier(0.2, 0.8, 0.2, 1),
            transform 1s cubic-bezier(0.2, 0.8, 0.2, 1);
        transition-delay: var(--delay, 0ms);
    }

    .reveal-item.active {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -100px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("active");
            }
        });
    }, observerOptions);

    document.querySelectorAll(".reveal-item").forEach((item) => {
        observer.observe(item);
    });
</script>
