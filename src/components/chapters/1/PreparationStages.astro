---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type PreparationStagesContent = {
    title: string;
    sectionId: string;
    intro: string;
    methods: Array<{
        id: number;
        text: string;
    }>;
    description: string;
    dataTypes: string[];
    subsections: Array<{
        id: string;
        title: string;
        slug: string;
    }>;
};

const content = await loadChapterSection<PreparationStagesContent>(
    1,
    "preparation-stages",
    lang,
);

if (!content) {
    throw new Error("Preparation Stages content not found");
}
---

<section id="preparation-stages" class="relative bg-[#050505] py-16 md:py-24">
    <div class="container mx-auto px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Section Header -->
            <div class="mb-8">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    १.४ {content.title}
                </h2>

                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed mb-6"
                >
                    {content.intro}
                </p>
            </div>

            <!-- Methods List (With checkmarks as per user text) -->
            <div class="space-y-4 mb-8">
                {
                    content.methods.map((method) => (
                        <div class="flex items-start gap-4">
                            <span class="text-zinc-100 font-serif text-lg md:text-xl font-light shrink-0">
                                ✓
                            </span>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {method.text}
                            </p>
                        </div>
                    ))
                }
            </div>

            <!-- Description -->
            <div class="mb-8">
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.description}
                </p>
            </div>
        </div>
    </div>
</section>
