---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type ScopeContent = {
    title: string;
    sectionId: string;
    mainContent: string;
    dataSources: string[];
    limitations: string[];
    strengths: string[];
};

const content = await loadChapterSection<ScopeContent>(1, "scope", lang);

if (!content) {
    throw new Error("Scope section content not found");
}
---

<section id="scope" class="relative bg-[#050505] py-8 md:py-12">
    <div class="container mx-auto px-8">
        <div class="w-full">
            <!-- Section Header -->
            <div class="mb-4">
                <h2
                    class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6"
                >
                    {content.title}
                </h2>
            </div>

            <!-- Main Content -->
            <div>
                <p
                    class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed"
                >
                    {content.mainContent}
                </p>
            </div>
        </div>
    </div>
</section>
