---
import type { Language } from "../../../lib/i18n";
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import { CheckCircle2, AlertCircle, TrendingUp } from "lucide-astro";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type ScopeContent = {
    title: string;
    sectionId: string;
    mainContent: string;
    dataSources: string[];
    limitations: string[];
    strengths: string[];
};

const content = await loadChapterSection<ScopeContent>(1, "scope", lang);

if (!content) {
    throw new Error("Scope section content not found");
}
---

<section id="scope" class="relative min-h-screen bg-[#050505] py-24 md:py-32">
    <!-- Radial Gradient Background (Removed per user request for seamless flow) -->
    <div class="absolute inset-0 pointer-events-none"></div>

    <div class="container mx-auto px-8 relative z-10">
        <!-- Section Header -->
        <div class="max-w-6xl mx-auto mb-16 reveal-item">
            <div
                class="inline-block px-6 py-2 bg-white/5 border border-white/10 mb-6"
            >
                <span class="text-zinc-500 font-serif text-sm tracking-wider"
                    >{content.sectionId}</span
                >
            </div>
            <h2
                class="font-serif text-[clamp(2.5rem,5vw,4.5rem)] md:text-[4.5rem] leading-[0.95] font-medium text-white tracking-tight mb-12"
            >
                {content.title}
            </h2>

            <!-- Main Content -->
            <div
                class="bg-white/[0.02] backdrop-blur-sm border border-white/5 p-8 md:p-12"
            >
                <p
                    class="text-zinc-400 font-serif text-lg md:text-xl leading-relaxed"
                >
                    {content.mainContent}
                </p>
            </div>
        </div>

        <!-- Three Column Layout: Sources, Limitations, Strengths -->
        <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Data Sources -->
            <div
                class="reveal-item bg-gradient-to-br from-white/[0.04] to-white/[0.01] backdrop-blur-sm border border-white/10 p-8"
                style="--delay: 200ms"
            >
                <div class="flex items-center gap-4 mb-6">
                    <div
                        class="w-12 h-12 flex items-center justify-center bg-white/10 border border-white/20"
                    >
                        <CheckCircle2 size={24} class="text-white" />
                    </div>
                    <h3
                        class="font-serif text-xl md:text-2xl text-white tracking-tight"
                    >
                        तथ्याङ्क स्रोतहरू
                    </h3>
                </div>
                <ul class="space-y-3">
                    {
                        content.dataSources.map((source, index) => (
                            <li class="flex items-start gap-3 group">
                                <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-white/10 text-white text-xs font-serif mt-0.5 group-hover:bg-white/20 transition-colors">
                                    {index + 1}
                                </span>
                                <span class="text-zinc-500 font-serif text-sm md:text-base flex-1 leading-relaxed">
                                    {source}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Limitations -->
            <div
                class="reveal-item bg-gradient-to-br from-white/[0.04] to-white/[0.01] backdrop-blur-sm border border-white/10 p-8"
                style="--delay: 350ms"
            >
                <div class="flex items-center gap-4 mb-6">
                    <div
                        class="w-12 h-12 flex items-center justify-center bg-white/10 border border-white/20"
                    >
                        <AlertCircle size={24} class="text-white" />
                    </div>
                    <h3
                        class="font-serif text-xl md:text-2xl text-white tracking-tight"
                    >
                        सीमितताहरू
                    </h3>
                </div>
                <ul class="space-y-3">
                    {
                        content.limitations.map((limitation, index) => (
                            <li class="flex items-start gap-3 group">
                                <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-white/10 text-white text-xs font-serif mt-0.5 group-hover:bg-white/20 transition-colors">
                                    {index + 1}
                                </span>
                                <span class="text-zinc-500 font-serif text-sm md:text-base flex-1 leading-relaxed">
                                    {limitation}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Strengths -->
            <div
                class="reveal-item bg-gradient-to-br from-white/[0.04] to-white/[0.01] backdrop-blur-sm border border-white/10 p-8"
                style="--delay: 500ms"
            >
                <div class="flex items-center gap-4 mb-6">
                    <div
                        class="w-12 h-12 flex items-center justify-center bg-white/10 border border-white/20"
                    >
                        <TrendingUp size={24} class="text-white" />
                    </div>
                    <h3
                        class="font-serif text-xl md:text-2xl text-white tracking-tight"
                    >
                        बलिया पक्षहरू
                    </h3>
                </div>
                <ul class="space-y-3">
                    {
                        content.strengths.map((strength, index) => (
                            <li class="flex items-start gap-3 group">
                                <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-white/10 text-white text-xs font-serif mt-0.5 group-hover:bg-white/20 transition-colors">
                                    {index + 1}
                                </span>
                                <span class="text-zinc-500 font-serif text-sm md:text-base flex-1 leading-relaxed">
                                    {strength}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Summary Stats -->
        <div
            class="max-w-6xl mx-auto mt-16 grid grid-cols-1 md:grid-cols-3 gap-6 reveal-item"
            style="--delay: 650ms"
        >
            <div class="bg-white/5 border border-white/10 p-8 text-center">
                <div
                    class="text-[clamp(3rem,6vw,4rem)] font-serif font-medium text-white leading-none mb-3"
                >
                    {content.dataSources.length}
                </div>
                <p class="text-zinc-500 font-serif text-sm md:text-base">
                    प्रमुख तथ्याङ्क स्रोतहरू
                </p>
            </div>

            <div class="bg-white/5 border border-white/10 p-8 text-center">
                <div
                    class="text-[clamp(3rem,6vw,4rem)] font-serif font-medium text-white leading-none mb-3"
                >
                    {content.limitations.length}
                </div>
                <p class="text-zinc-500 font-serif text-sm md:text-base">
                    पहिचान गरिएका सीमितताहरू
                </p>
            </div>

            <div class="bg-white/5 border border-white/10 p-8 text-center">
                <div
                    class="text-[clamp(3rem,6vw,4rem)] font-serif font-medium text-white leading-none mb-3"
                >
                    {content.strengths.length}
                </div>
                <p class="text-zinc-500 font-serif text-sm md:text-base">
                    मुख्य बलिया पक्षहरू
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    .reveal-item {
        opacity: 0;
        transform: translateY(40px);
        transition:
            opacity 1s cubic-bezier(0.2, 0.8, 0.2, 1),
            transform 1s cubic-bezier(0.2, 0.8, 0.2, 1);
        transition-delay: var(--delay, 0ms);
    }

    .reveal-item.active {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -100px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("active");
            }
        });
    }, observerOptions);

    document.querySelectorAll(".reveal-item").forEach((item) => {
        observer.observe(item);
    });
</script>
