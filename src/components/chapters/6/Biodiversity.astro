---
import { loadChapterSection } from "../../../lib/i18n/chapter-loader";
import type { Language } from "../../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

type BiodiversityAnimalsSection = {
    title: string;
    number: string;
    subsections: {
        wildlife: { heading: string; content: string };
        birds: { heading: string; content: string };
        reptiles: { heading: string; content: string };
        insects: { heading: string; content: string };
    };
};

type BiodiversityPlantsSection = {
    title: string;
    number: string;
    content1: string;
    heading: string;
    content2: string;
};

const biodiversityAnimals = (await loadChapterSection(6, "biodiversity-animals", lang)) as BiodiversityAnimalsSection;
const biodiversityPlants = (await loadChapterSection(6, "biodiversity-plants", lang)) as BiodiversityPlantsSection;
---

<!-- 6.3 Biodiversity and 6.3.1 Animals -->
{
    biodiversityAnimals && (
        <section id="biodiversity" class="relative bg-[#050505] pb-8 md:pb-12">
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <!-- 6.3 Main Section -->
                    <div class="mb-8">
                        <h2 class="font-serif text-3xl md:text-4xl font-medium text-zinc-100 mb-6">
                            {lang === "ne" ? "६.३ जैविक विविधता र वातावरणीय सेवा" : "6.3 Biodiversity and Environmental Services"}
                        </h2>
                    </div>

                    <!-- 6.3.1 Local Animals -->
                    <div id="wildlife" class="scroll-mt-24 mb-6">
                        <h3 class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6">
                            {biodiversityAnimals.number} {biodiversityAnimals.title}
                        </h3>
                    </div>

                    <div class="space-y-6">
                        <!-- Wildlife -->
                        <div>
                            <h4 class="font-serif text-xl md:text-2xl text-white font-medium mb-3">
                                {biodiversityAnimals.subsections.wildlife.heading}
                            </h4>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {biodiversityAnimals.subsections.wildlife.content}
                            </p>
                        </div>

                        <!-- Birds -->
                        <div>
                            <h4 class="font-serif text-xl md:text-2xl text-white font-medium mb-3">
                                {biodiversityAnimals.subsections.birds.heading}
                            </h4>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {biodiversityAnimals.subsections.birds.content}
                            </p>
                        </div>

                        <!-- Reptiles -->
                        <div>
                            <h4 class="font-serif text-xl md:text-2xl text-white font-medium mb-3">
                                {biodiversityAnimals.subsections.reptiles.heading}
                            </h4>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {biodiversityAnimals.subsections.reptiles.content}
                            </p>
                        </div>

                        <!-- Insects -->
                        <div>
                            <h4 class="font-serif text-xl md:text-2xl text-white font-medium mb-3">
                                {biodiversityAnimals.subsections.insects.heading}
                            </h4>
                            <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed">
                                {biodiversityAnimals.subsections.insects.content}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    )
}

<!-- 6.3.2 Important Vegetation -->
{
    biodiversityPlants && (
        <section id="flora" class="relative bg-[#050505] pb-8 md:pb-12">
            <div class="container mx-auto px-8">
                <div class="w-full">
                    <div class="mb-6">
                        <h3 class="font-serif text-2xl md:text-3xl font-medium text-zinc-100 mb-6">
                            {biodiversityPlants.number} {biodiversityPlants.title}
                        </h3>
                    </div>
                    <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed mb-6">
                        {biodiversityPlants.content1}
                    </p>
                    
                    <h4 class="font-serif text-xl md:text-2xl text-white font-medium mb-3">
                        {biodiversityPlants.heading}
                    </h4>
                    <p class="text-zinc-100 font-serif text-lg md:text-xl font-light leading-relaxed mb-10">
                        {biodiversityPlants.content2}
                    </p>
                </div>
            </div>
        </section>
    )
}
