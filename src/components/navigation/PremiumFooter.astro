---
import type { Language } from "../../lib/i18n";
import { getTranslations } from "../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<footer
    class="relative bg-slate-950 text-slate-300 py-24 overflow-hidden border-t border-slate-900/50"
>
    <!-- Background Elements -->
    <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900/40 via-slate-950/0 to-slate-950/0 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-8 relative z-10">
        <!-- Brand Section (Top Row) -->
        <div class="mb-8">
            <h3
                class="font-serif text-2xl text-white font-medium tracking-wide mb-1"
            >
                {t.home.hero.chaudandigadhi}
                {t.home.hero.municipality}
            </h3>
            <p class="text-slate-500 font-light text-lg">
                {t.home.hero.office}
            </p>
            <p class="text-slate-500 font-light text-lg">
                {t.home.hero.location}
            </p>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mb-8">
            <!-- Contact Info (Left Side - Single Column, Key-Value Grid) -->
            <div class="lg:col-span-5 flex flex-col gap-1">
                <h4 class="text-white font-serif tracking-wide">
                    {t.footer.contact}
                </h4>

                <div
                    class="grid grid-cols-[auto_1fr] gap-x-8 gap-y-1 items-baseline"
                >
                    <!-- Phone -->
                    <div
                        class="text-sm text-slate-500 uppercase font-medium font-serif whitespace-nowrap"
                    >
                        {t.footer.labels.phone}
                    </div>
                    <div
                        class="text-slate-200 font-serif tracking-normal text-lg"
                    >
                        {t.footer.values.phone}
                    </div>

                    <!-- Fax -->
                    <div
                        class="text-sm text-slate-500 uppercase font-medium font-serif whitespace-nowrap"
                    >
                        {t.footer.labels.fax}
                    </div>
                    <div
                        class="text-slate-200 font-serif tracking-normal text-lg"
                    >
                        {t.footer.values.fax}
                    </div>

                    <!-- Email -->
                    <div
                        class="text-sm text-slate-500 uppercase font-medium font-serif whitespace-nowrap mt-1.5 self-start"
                    >
                        {t.footer.labels.email}
                    </div>
                    <div class="flex flex-col gap-1">
                        <a
                            href={`mailto:${t.footer.values.email1}`}
                            class="text-slate-200 hover:text-white transition-colors block text-lg font-serif tracking-tight"
                            >{t.footer.values.email1}</a
                        >
                        <a
                            href={`mailto:${t.footer.values.email2}`}
                            class="text-slate-200 hover:text-white transition-colors block text-lg font-serif tracking-tight"
                            >{t.footer.values.email2}</a
                        >
                    </div>

                    <!-- Audio Notice -->
                    <div
                        class="text-sm text-slate-500 uppercase font-medium font-serif whitespace-nowrap"
                    >
                        {t.footer.labels.audioNotice}
                    </div>
                    <div
                        class="text-slate-200 font-serif tracking-normal text-lg"
                    >
                        {t.footer.values.audioNotice}
                    </div>

                    <!-- Website -->
                    <div
                        class="text-sm text-slate-500 uppercase font-medium font-serif whitespace-nowrap mt-1.5 self-start"
                    >
                        {t.footer.labels.website}
                    </div>
                    <div>
                        <a
                            href={`https://${t.footer.values.website}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-200 hover:text-white font-serif tracking-tight transition-colors text-lg border-b border-slate-800 hover:border-white pb-0.5 inline-block leading-tight"
                            >{t.footer.values.website}</a
                        >
                    </div>
                </div>
            </div>

            <!-- Important Links (positioned right, left aligned text) -->
            <div class="lg:col-span-4 lg:col-start-9 flex flex-col gap-6">
                <h4 class="text-white font-serif tracking-wide">
                    {t.footer.importantLinks}
                </h4>
                <ul class="flex flex-col gap-2.5 items-start w-full">
                    <li>
                        <a
                            href="https://mofaga.gov.np/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg font-serif border-b border-slate-500 block decoration-slate-500/30"
                        >
                            {t.footer.links.mofaga}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://censusnepal.cbs.gov.np/results"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg font-serif border-b border-slate-500 block decoration-slate-500/30"
                        >
                            {t.footer.links.census}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://nationaldata.gov.np/Province/Index/2"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg font-serif border-b border-slate-500 block decoration-slate-500/30"
                        >
                            {t.footer.links.nationalData}
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div
            class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p
                class="text-slate-600 text-sm font-medium tracking-wide font-serif"
            >
                {t.footer.copyright}
            </p>
        </div>
    </div>
</footer>
