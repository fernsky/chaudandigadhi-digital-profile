---
import type { Language } from "../../lib/i18n";
import { getTranslations } from "../../lib/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<footer
    class="relative bg-slate-950 text-slate-300 py-20 overflow-hidden border-t border-slate-900/50"
>
    <!-- Background Elements -->
    <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900/40 via-slate-950/0 to-slate-950/0 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-8 relative z-10">
        <!-- Brand Section (Top Row) -->
        <div class="mb-16">
            <h3
                class="font-serif text-3xl text-white font-medium tracking-wide mb-2"
            >
                {t.home.hero.chaudandigadhi}
            </h3>
            <p class="text-slate-500 font-light text-lg">
                {t.home.hero.office}
            </p>
            <p class="text-slate-500 font-light">
                {t.home.hero.location}
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 mb-16">
            <!-- Contact Info (Column 1) -->
            <div class="flex flex-col gap-8">
                <h4
                    class="text-white font-serif text-xl border-l-2 border-slate-700 pl-4"
                >
                    {t.footer.contact}
                </h4>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <!-- Phone -->
                    <div>
                        <p
                            class="text-xs text-slate-500 uppercase tracking-widest mb-1 font-medium"
                        >
                            {t.footer.labels.phone}
                        </p>
                        <p
                            class="text-slate-200 font-mono tracking-wide text-lg"
                        >
                            ०३५-४४०२४६, २४७
                        </p>
                    </div>

                    <!-- Fax -->
                    <div>
                        <p
                            class="text-xs text-slate-500 uppercase tracking-widest mb-1 font-medium"
                        >
                            {t.footer.labels.fax}
                        </p>
                        <p
                            class="text-slate-200 font-mono tracking-wide text-lg"
                        >
                            ०३५-४४०२४७
                        </p>
                    </div>

                    <!-- Email -->
                    <div class="md:col-span-2">
                        <p
                            class="text-xs text-slate-500 uppercase tracking-widest mb-1 font-medium"
                        >
                            {t.footer.labels.email}
                        </p>
                        <div class="flex flex-col gap-1">
                            <a
                                href="mailto:chaudandigadhimun@gmail.com"
                                class="text-slate-200 hover:text-white transition-colors block text-lg"
                                >chaudandigadhimun@gmail.com</a
                            >
                            <a
                                href="mailto:ito.chaudandigadhimun@gmail.com"
                                class="text-slate-200 hover:text-white transition-colors block text-lg"
                                >ito.chaudandigadhimun@gmail.com</a
                            >
                        </div>
                    </div>

                    <!-- Audio Notice -->
                    <div>
                        <p
                            class="text-xs text-slate-500 uppercase tracking-widest mb-1 font-medium"
                        >
                            {t.footer.labels.audioNotice}
                        </p>
                        <p
                            class="text-slate-200 font-mono tracking-wide text-lg"
                        >
                            १६१८०३५४४०२४७
                        </p>
                    </div>

                    <!-- Website -->
                    <div>
                        <p
                            class="text-xs text-slate-500 uppercase tracking-widest mb-1 font-medium"
                        >
                            {t.footer.labels.website}
                        </p>
                        <a
                            href="https://chaudandigadhmun.gov.np"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-200 hover:text-white font-mono tracking-wide transition-colors text-lg border-b border-transparent hover:border-white inline-block leading-tight"
                            >chaudandigadhmun.gov.np</a
                        >
                    </div>
                </div>
            </div>

            <!-- Important Links (Column 2) -->
            <div class="flex flex-col gap-8">
                <h4
                    class="text-white font-serif text-xl border-l-2 border-slate-700 pl-4"
                >
                    {t.footer.importantLinks}
                </h4>
                <ul class="flex flex-col gap-5 items-start">
                    <li>
                        <a
                            href="https://mofaga.gov.np/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg border-b border-slate-800 hover:border-white pb-1"
                        >
                            {t.footer.links.mofaga}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://censusnepal.cbs.gov.np/results"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg border-b border-slate-800 hover:border-white pb-1"
                        >
                            {t.footer.links.census}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://nationaldata.gov.np/Province/Index/2"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-slate-300 hover:text-white transition-all duration-300 text-lg border-b border-slate-800 hover:border-white pb-1"
                        >
                            {t.footer.links.nationalData}
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-slate-900 pt-8 mt-8">
            <p
                class="text-slate-600 text-sm text-left font-medium tracking-wide"
            >
                {t.footer.copyright}
            </p>
        </div>
    </div>
</footer>
