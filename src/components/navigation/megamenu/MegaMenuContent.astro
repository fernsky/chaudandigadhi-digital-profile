---
import type { Language } from "../../../lib/i18n";
import { getTranslations, allChapters } from "../../../lib/i18n";

interface Props {
  lang: Language;
  currentChapter?: number;
}

const { lang, currentChapter } = Astro.props;
const t = getTranslations(lang);

// Default to first chapter if no current chapter
const initialChapter = currentChapter || 1;
---

<!-- Content Area (Right Side - Scrollable Sections) -->
<div class="flex-1 min-w-0 h-full flex flex-col">
  {
    allChapters.map((num) => {
      const chapter = t.chapters[num];
      const sections = chapter.sections || [];
      const isInitiallyVisible = num === initialChapter;

      return (
        <div
          data-chapter-content={num}
          class={`mega-menu-content h-full flex flex-col ${isInitiallyVisible ? "flex" : "hidden"}`}
        >
          {/* Header */}
          <div class="px-8 py-6 border-b border-slate-800">
            <h4 class="text-xl font-serif font-semibold text-white">
              {chapter.title}
            </h4>
          </div>

          {/* Scrollable sections */}
          <div class="flex-1 overflow-y-auto px-8 py-6">
            <div class="space-y-0">
              {sections.map((section: any) => (
                <a
                  href={`/${lang}/${chapter.slug}#${section.slug}`}
                  class="group/item flex items-center justify-between py-4 px-4 -mx-4 transition-all duration-150 border-l-4 border-transparent hover:border-primary-400 hover:bg-slate-900/30"
                >
                  <div class="flex-1 min-w-0">
                    <div class="text-base text-slate-300 group-hover/item:text-white transition-colors">
                      {section.title}
                    </div>
                  </div>
                  <svg
                    class="flex-shrink-0 w-5 h-5 text-slate-600 opacity-0 group-hover/item:opacity-100 group-hover/item:text-primary-400 transition-all duration-150"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              ))}
            </div>
          </div>

          {/* View Full Chapter Link */}
          <div class="px-8 py-6 border-t border-slate-800">
            <a
              href={`/${lang}/${chapter.slug}`}
              class="inline-flex items-center gap-2 text-base font-medium text-primary-400 hover:text-primary-300 transition-colors group/link"
            >
              <span>
                {lang === "ne"
                  ? "पूर्ण परिच्छेद हेर्नुहोस्"
                  : "View Full Chapter"}
              </span>
              <svg
                class="w-5 h-5 transform group-hover/link:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      );
    })
  }
</div>

<style>
  /* Smooth transitions */
  .mega-menu-content {
    animation: fadeIn 0.15s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<script>
  // Listen for category change events
  document.addEventListener("megamenu:categoryChange", ((
    e: CustomEvent,
  ) => {
    const selectedChapter = e.detail.chapter;

    // Hide all content sections
    const allContent = document.querySelectorAll(".mega-menu-content");
    allContent.forEach((content) => {
      content.classList.add("hidden");
      content.classList.remove("flex");
    });

    // Show selected chapter content
    const selectedContent = document.querySelector(
      `[data-chapter-content="${selectedChapter}"]`,
    );
    if (selectedContent) {
      selectedContent.classList.remove("hidden");
      selectedContent.classList.add("flex");
    }
  }) as EventListener);
</script>
