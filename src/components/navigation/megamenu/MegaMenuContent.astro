---
import type { Language } from "../../../lib/i18n";
import { getTranslations, allChapters } from "../../../lib/i18n";

interface Props {
  lang: Language;
  currentChapter?: number;
}

const { lang, currentChapter } = Astro.props;
const t = getTranslations(lang);

// Default to first chapter if no current chapter
const initialChapter = currentChapter || 1;
---

<!-- Content Area (Right Side - Scrollable Sections) -->
<div class="flex-1 min-w-0">
  <div class="bg-slate-900/30 rounded-lg p-6 border border-slate-800/50 shadow-xl">
    {
      allChapters.map((num) => {
        const chapter = t.chapters[num];
        const sections = chapter.sections || [];
        const isInitiallyVisible = num === initialChapter;

        return (
          <div
            data-chapter-content={num}
            class={`mega-menu-content ${isInitiallyVisible ? "block" : "hidden"}`}
          >
            <div class="mb-6">
              <h4 class="text-lg font-serif font-semibold text-slate-200 mb-2">
                {chapter.title}
              </h4>
              <p class="text-sm text-slate-400">{chapter.description}</p>
            </div>

            {/* Scrollable sections grid */}
            <div class="max-h-[60vh] overflow-y-auto custom-scrollbar pr-2">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                {sections.map((section: any) => (
                  <a
                    href={`/${lang}/${chapter.slug}#${section.slug}`}
                    class="group/item flex items-center gap-3 p-3 rounded-md hover:bg-slate-800/40 transition-all duration-200 border border-transparent hover:border-slate-700/50 hover:shadow-lg"
                  >
                    <div class="flex-1 min-w-0">
                      <div class="font-medium text-sm text-slate-300 group-hover/item:text-white transition-colors line-clamp-2">
                        {section.title}
                      </div>
                    </div>
                    <svg
                      class="flex-shrink-0 w-4 h-4 text-slate-600 opacity-0 group-hover/item:opacity-100 group-hover/item:text-primary-400 transition-all duration-200 transform group-hover/item:translate-x-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                ))}
              </div>
            </div>

            {/* View Full Chapter Link */}
            <div class="mt-6 pt-6 border-t border-slate-800">
              <a
                href={`/${lang}/${chapter.slug}`}
                class="inline-flex items-center gap-2 text-sm font-medium text-primary-400 hover:text-primary-300 transition-colors group/link"
              >
                <span>
                  {lang === "ne"
                    ? "पूर्ण परिच्छेद हेर्नुहोस्"
                    : "View Full Chapter"}
                </span>
                <svg
                  class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            </div>
          </div>
        );
      })
    }
  </div>
</div>

<style>
  /* Custom scrollbar for content area */
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  /* Smooth transitions */
  .mega-menu-content {
    animation: fadeIn 0.2s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Listen for category change events
  document.addEventListener("megamenu:categoryChange", ((
    e: CustomEvent,
  ) => {
    const selectedChapter = e.detail.chapter;

    // Hide all content sections
    const allContent = document.querySelectorAll(".mega-menu-content");
    allContent.forEach((content) => {
      content.classList.add("hidden");
      content.classList.remove("block");
    });

    // Show selected chapter content
    const selectedContent = document.querySelector(
      `[data-chapter-content="${selectedChapter}"]`,
    );
    if (selectedContent) {
      selectedContent.classList.remove("hidden");
      selectedContent.classList.add("block");
    }
  }) as EventListener);
</script>
