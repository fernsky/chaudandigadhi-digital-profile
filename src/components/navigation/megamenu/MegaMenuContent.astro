---
import type { Language } from "../../../lib/i18n";
import { getTranslations, allChapters } from "../../../lib/i18n";

interface Props {
  lang: Language;
  currentChapter?: number;
}

const { lang, currentChapter } = Astro.props;
const t = getTranslations(lang);

// Default to first chapter if no current chapter
const initialChapter = currentChapter || 1;
---

<!-- Content Area (Right Side - Scrollable Sections) -->
<div class="flex-1 min-w-0 h-full flex flex-col overflow-hidden">
  {
    allChapters.map((num) => {
      const chapter = t.chapters[num];
      // Handle both old array format and new object format
      const sections = Array.isArray(chapter.sections)
        ? chapter.sections
        : chapter.sections
          ? Object.values(chapter.sections)
          : [];
      const isInitiallyVisible = num === initialChapter;

      return (
        <div
          data-chapter-content={num}
          class={`mega-menu-content w-full h-full flex flex-col ${isInitiallyVisible ? "flex" : "hidden"}`}
        >
          <!-- Header with Full-Bleed Bottom Border -->
          <!-- We use a pseudo-element on this relative container to draw the line all the way to the right -->
          <div class="relative w-full">
            <div class="pl-6 pr-12 py-8">
              <h4 class="text-2xl font-serif font-semibold text-white">
                {chapter.description}
              </h4>
            </div>
          </div>

          <!-- Scrollable sections -->
          <div class="flex-1 overflow-y-auto pl-6 pr-12 py-8 pb-32 scrollbar-hide min-h-0">
            <div class="grid grid-cols-2 gap-x-16 gap-y-6">
              {sections.map((section: any) => (
                <a
                  href={`/${lang}/${chapter.slug}#${section.slug}`}
                  class="group/item flex items-start justify-between transition-all duration-300"
                >
                  <div class="flex-1 min-w-0 pr-4">
                    <div class="text-lg font-serif text-zinc-400 group-hover/item:text-white group-hover/item:translate-x-1 transition-all duration-300">
                      {section.title}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- View Full Chapter Link with Full-Bleed Top Border -->
          <div class="relative w-full pl-6 pr-12 py-6">
            <a
              href={`/${lang}/${chapter.slug}`}
              class="inline-flex items-center gap-2 text-base font-medium text-zinc-300 hover:text-white transition-colors group/link hover:translate-x-1 duration-300"
            >
              <span>
                {lang === "ne"
                  ? "पूर्ण परिच्छेद हेर्नुहोस्"
                  : "View Full Chapter"}
              </span>
              <svg
                class="w-5 h-5 transform group-hover/link:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      );
    })
  }
</div>

<style>
  /* Smooth transitions */
  .mega-menu-content {
    animation: fadeIn 0.15s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Hide scrollbar */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  // Listen for category change events
  document.addEventListener("megamenu:categoryChange", ((e: CustomEvent) => {
    const selectedChapter = e.detail.chapter;

    // Hide all content sections
    const allContent = document.querySelectorAll(".mega-menu-content");
    allContent.forEach((content) => {
      content.classList.add("hidden");
      content.classList.remove("flex");
    });

    // Show selected chapter content
    const selectedContent = document.querySelector(
      `[data-chapter-content="${selectedChapter}"]`,
    );
    if (selectedContent) {
      selectedContent.classList.remove("hidden");
      selectedContent.classList.add("flex");
    }
  }) as EventListener);
</script>
